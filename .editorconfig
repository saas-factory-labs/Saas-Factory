[*.{js,ts,jsx,tsx,mjs}]
indent_style = tab
indent_size = 2
end_of_line = lf

#### JSON files ####
[*.json]
indent_style = space
indent_size = 2

#### YAML files ####
[*.{yml,yaml}]
indent_style = space
indent_size = 2

#### XML files ####
[*.{xml,csproj,props,targets,config}]
indent_style = space
indent_size = 2

#### Markdown files ####
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

#### Shell scripts ####
[*.{sh,bash}]
