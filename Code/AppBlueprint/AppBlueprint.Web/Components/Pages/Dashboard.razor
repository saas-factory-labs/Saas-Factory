@page "/dashboard"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Logging
@using AppBlueprint.Application.Services
@using AppBlueprint.SharedKernel.Enums
@inject ILogger<Dashboard> Logger
@inject ICurrentTenantService CurrentTenantService


<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">

    <!-- Tenant Type Banner -->
    @if (tenantType.HasValue)
    {
        <div class="mb-6 rounded-lg p-4 @GetTenantTypeBannerClass()">
            <div class="flex items-center gap-3">
                <svg class="w-6 h-6 @GetTenantTypeIconColorClass()" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    @if (tenantType == TenantType.Personal)
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    }
                    else
                    {
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    }
                </svg>
                <div>
                    <h3 class="text-sm font-semibold @GetTenantTypeTextClass()">
                        @GetTenantTypeName()
                    </h3>
                    <p class="text-xs @GetTenantTypeDescriptionClass()">
                        @GetTenantTypeDescription()
                    </p>
                </div>
            </div>
        </div>
    }

    <WelcomeBanner/>

    <!-- Dashboard actions -->
    <div class="sm:flex sm:justify-end sm:items-center mb-8">

        <!-- Right: Actions -->
        <div class="grid grid-flow-col sm:auto-cols-max justify-end gap-2">

            <!-- Filter button -->
            <DropdownFilter Align="right"/>
            <!-- Datepicker built with flatpickr -->
            <Datepicker Align="right"/>
            <!-- Add view button -->
            <button class="btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white">
                <svg class="fill-current shrink-0 xs:hidden" width="16" height="16" viewBox="0 0 16 16">
                    <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z"/>
                </svg>
                <span class="max-xs:sr-only">Add View</span>
            </button>
        </div>

    </div>

    <!-- Cards -->
    <div class="grid grid-cols-12 gap-6">

        <!-- Line chart (Acme Plus) -->
        <DashboardCard01/>
        <!-- Line chart (Acme Advanced) -->
        <DashboardCard02/>
        <!-- Line chart (Acme Professional) -->
        <DashboardCard03/>
        <!-- Bar chart (Direct vs Indirect) -->
        <DashboardCard04/>
        <!-- Line chart (Real Time Value) -->
        <DashboardCard05/>
        <!-- Doughnut chart (Top Countries) -->
        <DashboardCard06/>
        <!-- Table (Top Channels) -->
        <DashboardCard07/>
        <!-- Line chart (Sales Over Time) -->
        <DashboardCard08/>
        <!-- Stacked bar chart (Sales VS Refunds) -->
        <DashboardCard09/>
        <!-- Card (Recent Activity) -->
        <DashboardCard10/>
        <!-- Card (Income/Expenses) -->
        <DashboardCard11/>

    </div>

</div>

@code {
    private TenantType? tenantType;

    protected override async Task OnInitializedAsync()
    {
        tenantType = await CurrentTenantService.GetTenantTypeAsync();
        Logger.LogInformation("[Dashboard] Loaded tenant type: {TenantType}", tenantType);
    }

    protected override void OnParametersSet()
    {
        
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
        
        }
        else
        {
        
        }
    }

    private string GetTenantTypeName()
    {
        return tenantType switch
        {
            TenantType.Personal => "Personal Account (B2C)",
            TenantType.Organization => "Business Account (B2B)",
            _ => "Account"
        };
    }

    private string GetTenantTypeDescription()
    {
        return tenantType switch
        {
            TenantType.Personal => "You're using a personal account for individual use",
            TenantType.Organization => "You're using a business account with team collaboration features",
            _ => "Account type information"
        };
    }

    private string GetTenantTypeBannerClass()
    {
        return tenantType switch
        {
            TenantType.Personal => "bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800",
            TenantType.Organization => "bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800",
            _ => "bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700"
        };
    }

    private string GetTenantTypeIconColorClass()
    {
        return tenantType switch
        {
            TenantType.Personal => "text-blue-600 dark:text-blue-400",
            TenantType.Organization => "text-purple-600 dark:text-purple-400",
            _ => "text-gray-600 dark:text-gray-400"
        };
    }

    private string GetTenantTypeTextClass()
    {
        return tenantType switch
        {
            TenantType.Personal => "text-blue-900 dark:text-blue-100",
            TenantType.Organization => "text-purple-900 dark:text-purple-100",
            _ => "text-gray-900 dark:text-gray-100"
        };
    }

    private string GetTenantTypeDescriptionClass()
    {
        return tenantType switch
        {
            TenantType.Personal => "text-blue-700 dark:text-blue-300",
            TenantType.Organization => "text-purple-700 dark:text-purple-300",
            _ => "text-gray-700 dark:text-gray-300"
        };
    }
}
