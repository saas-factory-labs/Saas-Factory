@page "/signup/personal"
@using AppBlueprint.Web.Models.Auth
@using Microsoft.AspNetCore.Components.Forms
@using System.Text.Json
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject IConfiguration Configuration

<main class="bg-white dark:bg-gray-900">
    <div class="relative flex">
        <!-- Content -->
        <div class="w-full md:w-1/2">
            <div class="min-h-[100dvh] h-full flex flex-col after:flex-1">
                
                <div class="flex-1">
                    <div class="flex items-center justify-between h-16 px-4 sm:px-6 lg:px-8">
                        <!-- Logo -->
                        <a class="block" href="/">
                            <svg width="32" height="32" viewBox="0 0 32 32">
                                <defs>
                                    <linearGradient x1="28.538%" y1="20.229%" x2="100%" y2="108.156%" id="logo-a">
                                        <stop stop-color="#A5B4FC" stop-opacity="0" offset="0%" />
                                        <stop stop-color="#A5B4FC" offset="100%" />
                                    </linearGradient>
                                    <linearGradient x1="88.638%" y1="29.267%" x2="22.42%" y2="100%" id="logo-b">
                                        <stop stop-color="#38BDF8" stop-opacity="0" offset="0%" />
                                        <stop stop-color="#38BDF8" offset="100%" />
                                    </linearGradient>
                                </defs>
                                <rect fill="#2563EB" width="32" height="32" rx="16" />
                                <path d="M18.277.16C26.035 1.267 32 7.938 32 16c0 8.837-7.163 16-16 16a15.937 15.937 0 01-10.426-3.863L18.277.161z" fill="#1E40AF" />
                                <path d="M7.404 2.503l18.339 26.19A15.93 15.93 0 0116 32C7.163 32 0 24.837 0 16 0 10.327 2.952 5.344 7.404 2.503z" fill="url(#logo-a)" />
                                <path d="M2.223 24.14L29.777 7.86A15.926 15.926 0 0132 16c0 8.837-7.163 16-16 16-5.864 0-10.991-3.154-13.777-7.86z" fill="url(#logo-b)" />
                            </svg>
                        </a>
                        <!-- Back button -->
                        <a class="text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" href="/signup">
                            ← Back
                        </a>
                    </div>
                </div>

                <div class="max-w-sm mx-auto w-full px-4 py-8">
                    <h1 class="text-3xl text-gray-800 dark:text-gray-100 font-bold mb-2">Create Personal Account ✨</h1>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">Set up your individual workspace</p>

                    <!-- Info box -->
                    <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4 mb-6">
                        <div class="flex items-start">
                            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mt-0.5 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                            </svg>
                            <div>
                                <h3 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-1">Secure Authentication</h3>
                                <p class="text-xs text-blue-800 dark:text-blue-300">After submitting this form, you'll be redirected to our secure Logto authentication page to create your account credentials.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Form -->
                    <EditForm Model="@model" OnValidSubmit="@HandleSubmit" FormName="personal-signup-form">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-4 text-sm text-red-800 dark:text-red-300" />

                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300" for="firstName">
                                    First Name <span class="text-red-500">*</span>
                                </label>
                                <InputText id="firstName" @bind-Value="model.FirstName" class="form-input w-full" placeholder="John" />
                                <ValidationMessage For="@(() => model.FirstName)" class="text-xs text-red-600 dark:text-red-400 mt-1" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium mb-1 text-gray-700 dark:text-gray-300" for="lastName">
                                    Last Name <span class="text-red-500">*</span>
                                </label>
                                <InputText id="lastName" @bind-Value="model.LastName" class="form-input w-full" placeholder="Doe" />
                                <ValidationMessage For="@(() => model.LastName)" class="text-xs text-red-600 dark:text-red-400 mt-1" />
                            </div>

                            <div class="pt-2">
                                <label class="flex items-start">
                                    <InputCheckbox @bind-Value="model.AcceptTerms" class="form-checkbox mt-1" />
                                    <span class="text-sm ml-2 text-gray-600 dark:text-gray-400">
                                        I agree to the <a href="/terms" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Terms of Service</a> 
                                        and <a href="/privacy" class="text-blue-600 hover:text-blue-700 dark:text-blue-400">Privacy Policy</a>
                                        <span class="text-red-500">*</span>
                                    </span>
                                </label>
                                <ValidationMessage For="@(() => model.AcceptTerms)" class="text-xs text-red-600 dark:text-red-400 mt-1" />
                            </div>
                        </div>

                        <div class="mt-6">
                            <button type="submit" disabled="@isSubmitting" 
                                    class="btn bg-blue-600 hover:bg-blue-700 text-white w-full disabled:opacity-50 disabled:cursor-not-allowed">
                                @if (isSubmitting)
                                {
                                    <span>Processing...</span>
                                }
                                else
                                {
                                    <span>Continue to Secure Login →</span>
                                }
                            </button>
                        </div>
                    </EditForm>

                    <!-- Footer -->
                    <div class="pt-5 mt-6 border-t border-gray-200 dark:border-gray-700">
                        <div class="text-sm text-gray-600 dark:text-gray-400">
                            Already have an account? <a class="font-medium text-blue-600 hover:text-blue-700 dark:text-blue-400" href="/signin">Sign In</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Image -->
        <div class="hidden md:block absolute top-0 bottom-0 right-0 md:w-1/2" aria-hidden="true">
            <img class="object-cover object-center w-full h-full" src="https://images.unsplash.com/photo-1531973576160-7125cd663d86" width="760" height="1024" alt="Personal workspace" />
        </div>

    </div>
</main>

@code {
    private PersonalSignupModel model = new();
    private bool isSubmitting = false;

    private async Task HandleSubmit()
    {
        isSubmitting = true;
        
        try
        {
            // Create session data
            var sessionData = new SignupSessionData
            {
                AccountType = "personal",
                FirstName = model.FirstName,
                LastName = model.LastName,
                AcceptedTerms = model.AcceptTerms,
                CreatedAt = DateTime.UtcNow
            };

            // Store in local storage
            var json = JsonSerializer.Serialize(sessionData);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "signupSession", json);

            // Get Logto configuration
            var logtoEndpoint = Configuration["Logto:Endpoint"];
            var appId = Configuration["Logto:AppId"];
            var redirectUri = Configuration["Logto:RedirectUri"] ?? $"{Navigation.BaseUri}callback";

            // Build Logto sign-up URL with state parameter
            var signupUrl = $"{logtoEndpoint}/sign-up?client_id={appId}&redirect_uri={Uri.EscapeDataString(redirectUri)}&response_type=code&scope=openid%20profile%20email&state=personal";

            // Redirect to Logto sign-up
            Navigation.NavigateTo(signupUrl, forceLoad: true);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[SignupPersonal] Error: {ex.Message}");
            isSubmitting = false;
        }
    }
}
