@page "/signup"
@inject NavigationManager Navigation

<main class="bg-white dark:bg-gray-900">
    <div class="relative min-h-screen flex flex-col justify-center">
        <!-- Content -->
        <div class="w-full max-w-6xl mx-auto px-4 py-8">
            
            <!-- Header -->
            <div class="text-center mb-12">
                <h1 class="text-4xl text-gray-800 dark:text-gray-100 font-bold mb-4">Choose Your Account Type</h1>
                <p class="text-xl text-gray-600 dark:text-gray-400">Select the option that best fits your needs</p>
            </div>

            <!-- Account Type Cards -->
            <div class="grid md:grid-cols-2 gap-8 mb-8">
                
                <!-- Personal Account Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 border-2 border-transparent hover:border-blue-500 transition-all cursor-pointer"
                     @onclick="@(() => Navigation.NavigateTo("/signup/personal"))">
                    <div class="text-center mb-6">
                        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 dark:bg-blue-900 mb-4">
                            <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-2">Personal Account</h2>
                        <p class="text-blue-600 dark:text-blue-400 font-semibold">For Individuals</p>
                    </div>
                    
                    <ul class="space-y-3 mb-6">
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-gray-700 dark:text-gray-300">Quick setup in minutes</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-gray-700 dark:text-gray-300">Personal workspace</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-gray-700 dark:text-gray-300">Individual features</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span class="text-gray-700 dark:text-gray-300">Perfect for personal use</span>
                        </li>
                    </ul>
                    
                    <button type="button" class="btn bg-blue-600 hover:bg-blue-700 text-white w-full">
                        Get Started
                    </button>
                </div>

                <!-- Business Account Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 border-2 border-transparent hover:border-purple-500 transition-all cursor-pointer"
                     @onclick="@(() => Navigation.NavigateTo("/signup/business"))">
                    <div class="text-center mb-6">
                        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-purple-100 dark:bg-purple-900 mb-4">
                            <svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
