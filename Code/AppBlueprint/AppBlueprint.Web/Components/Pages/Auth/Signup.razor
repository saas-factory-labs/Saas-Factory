@page "/signup"
@layout AppBlueprint.UiKit.Components.Layout.AuthLayout
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@inject NavigationManager Navigation

<style>
    .orange-cta-button {
        background: linear-gradient(135deg, #ff6b35 0%, #ff8c42 100%);
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        box-shadow: 0 0 30px rgba(255, 107, 53, 0.3);
    }
    
    .orange-cta-button:hover {
        background: linear-gradient(135deg, #ff8c42 0%, #ffa45c 100%);
        box-shadow: 0 0 40px rgba(255, 107, 53, 0.5);
    }
</style>

<main class="min-h-screen bg-slate-900">
    <div class="relative min-h-screen flex flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="w-full max-w-md mx-auto">
            
            <!-- Header -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-white shadow-md mb-6">
                    <svg class="w-10 h-10 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                    </svg>
                </div>
                <h1 class="text-3xl font-bold text-white mb-3">
                    Create Your Account
                </h1>
                <p class="text-lg text-slate-400">
                    Get started in seconds with secure authentication
                </p>
            </div>

            <!-- Main Signup Card -->
            <div class="bg-white rounded-xl shadow-xl p-8 mb-6">
                
                <!-- Benefits List -->
                <ul class="space-y-5 mb-8">
                    <li class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-6 h-6 rounded-full bg-emerald-500">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-3">
                            <p class="text-base font-medium text-slate-900">Create your account and start immediately</p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-6 h-6 rounded-full bg-emerald-500">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-3">
                            <p class="text-base font-medium text-slate-900">Customize your workspace after signing in</p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-6 h-6 rounded-full bg-emerald-500">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-3">
                            <p class="text-base font-medium text-slate-900">Enterprise-grade security</p>
                        </div>
                    </li>
                    <li class="flex items-start">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center w-6 h-6 rounded-full bg-emerald-500">
                                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </div>
                        </div>
                        <div class="ml-3">
                            <p class="text-base font-medium text-slate-900">No credit card required</p>
                        </div>
                    </li>
                </ul>
                
                <!-- CTA Button -->
                <button 
                    type="button" 
                    @onclick="HandleSignup" 
                    class="orange-cta-button w-full py-4 px-8 text-white text-lg font-bold rounded-lg shadow-lg hover:shadow-xl transform hover:scale-[1.02] transition-all duration-300 flex items-center justify-center">
                    <span>Create Account</span>
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </button>

                <!-- Divider -->
                <div class="relative my-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-slate-200"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-3 bg-white text-slate-500">
                            Secure sign up
                        </span>
                    </div>
                </div>

                <!-- Trust Badge -->
                <div class="text-center">
                    <p class="text-xs text-slate-500">
                        Protected by enterprise-grade encryption
                    </p>
                </div>
            </div>

            <!-- Footer -->
            <div class="text-center">
                <p class="text-sm text-slate-400">
                    Already have an account? 
                    <a class="font-medium text-indigo-400 hover:text-indigo-300 ml-1" href="/auth/signin">
                        Sign in
                    </a>
                </p>
            </div>

        </div>
    </div>
</main>

@code {
    /// <summary>
    /// Redirects to Logto authentication.
    /// After successful authentication, user will be redirected to /onboarding
    /// where they can fill in their profile details and choose account type.
    /// </summary>
    private void HandleSignup()
    {
        Navigation.NavigateTo("/auth/signin", forceLoad: true);
    }
}
