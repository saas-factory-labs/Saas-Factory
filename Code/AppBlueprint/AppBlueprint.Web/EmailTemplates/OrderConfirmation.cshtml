@model AppBlueprint.Contracts.Email.OrderConfirmationEmailModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Order Confirmation";
    ViewData["HeaderTitle"] = "Order Confirmed!";
    ViewData["SiteName"] = Model.SiteName;
    ViewData["SupportEmail"] = Model.SupportEmail;
}

<p>Hi <strong>@Model.CustomerName</strong>,</p>

<p>Thank you for your order! We've received your payment and are processing your order now.</p>

<h2 style="font-size: 20px; margin: 30px 0 20px 0;">Order Details</h2>

<div class="info-box">
    <p><strong>Order ID:</strong> @Model.OrderId</p>
</div>

<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 20px 0; border-collapse: collapse;">
    <thead>
        <tr style="background-color: #f4f4f5;">
            <th style="padding: 12px; text-align: left; border-bottom: 2px solid #e4e4e7;">Product</th>
            <th style="padding: 12px; text-align: center; border-bottom: 2px solid #e4e4e7;">Qty</th>
            <th style="padding: 12px; text-align: right; border-bottom: 2px solid #e4e4e7;">Price</th>
            <th style="padding: 12px; text-align: right; border-bottom: 2px solid #e4e4e7;">Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td style="padding: 12px; border-bottom: 1px solid #e4e4e7;">@item.ProductName</td>
                <td style="padding: 12px; text-align: center; border-bottom: 1px solid #e4e4e7;">@item.Quantity</td>
                <td style="padding: 12px; text-align: right; border-bottom: 1px solid #e4e4e7;">$@item.UnitPrice.ToString("F2")</td>
                <td style="padding: 12px; text-align: right; border-bottom: 1px solid #e4e4e7;">$@item.Total.ToString("F2")</td>
            </tr>
        }
        <tr>
            <td colspan="3" style="padding: 16px 12px 12px 12px; text-align: right; font-weight: 600; font-size: 18px;">Total:</td>
            <td style="padding: 16px 12px 12px 12px; text-align: right; font-weight: 700; font-size: 18px; color: #667eea;">$@Model.TotalAmount.ToString("F2")</td>
        </tr>
    </tbody>
</table>

<div style="text-align: center;">
    <a href="@Model.OrderDetailsUrl" class="email-button">View Order Details</a>
</div>

<p style="margin-top: 30px;">We'll send you another email once your order has been shipped.</p>

<p>Best regards,<br/>The @Model.SiteName Team</p>
