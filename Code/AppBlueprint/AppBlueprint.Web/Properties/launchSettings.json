{
  "$schema": "https://json.schemastore.org/launchsettings.json",
  "//": "AppBlueprint Demo App uses Hybrid Mode to support both B2C and B2B user flows.",
  "//DATABASECONTEXT_CONTEXTTYPE": "Primary context type (B2C or B2B)",
  "//DATABASECONTEXT_ENABLEHYBRIDMODE": "When true, registers ALL contexts (Baseline, B2C, B2B) for dynamic dashboards",
  "//Documentation": "See Code/AppBlueprint/DATABASE_HYBRID_MODE_SETUP.md",
  "profiles": {
    "http": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": false,
      "applicationUrl": "http://localhost:5000",
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development",
        "DOTNET_RESOURCE_SERVICE_ENDPOINT_URL": "https://localhost:7200",
        "API_BASE_URL": "http://localhost:8091",
        "//DATABASE_CONNECTION_STRING": "Use Doppler secrets - do not commit real credentials here",
        "DATABASECONTEXT_CONTEXTTYPE": "B2C",
        "DATABASECONTEXT_ENABLEHYBRIDMODE": "true"
      }
    }
  }
}