<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- Basic Project Properties -->
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- NuGet Package Configuration -->
        <Version>$(GITVERSION_SemVer)</Version>
        <PackageId>SaaS-Factory.AppBlueprint.Infrastructure</PackageId>
        <Authors>Casper Rubæk</Authors>
        <Description>Infrastructure library with database repositories and external services</Description>
        <PackageTags>infrastructure database-repositories external-services</PackageTags>
        <PackageProjectUrl>https://github.com/saas-factory-labs/Saas-Factory/blob/main/Code/AppBlueprint/Shared-Modules/AppBlueprint.Infrastructure/README.md</PackageProjectUrl>
        <RepositoryUrl>https://github.com/saas-factory-labs/Saas-Factory</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageIcon>infrastructure-icon.png</PackageIcon>
    </PropertyGroup>

    <ItemGroup>
        <!-- Framework references for ASP.NET Core types -->
        <FrameworkReference Include="Microsoft.AspNetCore.App" />
    </ItemGroup>

    <ItemGroup>
        <!-- Authentication and Security -->
        <PackageReference Include="Logto.AspNetCore.Authentication"/>
        
        <!-- Entity Framework and Database -->
        <PackageReference Include="Microsoft.EntityFrameworkCore"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Relational"/>
        <PackageReference Include="Microsoft.EntityFrameworkCore.Design"/>
        <PackageReference Include="Npgsql.EntityFrameworkCore.PostgreSQL"/>
        
        <!-- Configuration and Hosting -->
        <PackageReference Include="Microsoft.Extensions.Compliance.Redaction"/>
        <PackageReference Include="Microsoft.Extensions.Compliance.Abstractions"/>
        
        <!-- Health Checks -->
        <PackageReference Include="AspNetCore.HealthChecks.NpgSql"/>
        <PackageReference Include="AspNetCore.HealthChecks.Redis"/>
        <PackageReference Include="AspNetCore.HealthChecks.Uris"/>
        
        <!-- GraphQL and API Clients -->
        <PackageReference Include="Microsoft.Kiota.Abstractions"/>
        
        <!-- Serialization and Data Handling -->
        <PackageReference Include="Newtonsoft.Json"/>
        
        <!-- External Services -->
        <PackageReference Include="RazorLight"/>
        <PackageReference Include="Resend"/>
        <PackageReference Include="Stripe.net"/>
        <PackageReference Include="AWSSDK.S3"/>

        <!-- SignalR -->
        <PackageReference Include="Microsoft.AspNetCore.SignalR.Protocols.MessagePack"/>

        <!-- Reverse Proxy -->
        <PackageReference Include="Yarp.ReverseProxy"/>
        
        <!-- MSBuild (explicit override for vulnerable transitive dependencies) -->
        <PackageReference Include="Microsoft.Build.Tasks.Core"/>
        <PackageReference Include="Microsoft.Build.Utilities.Core"/>
    </ItemGroup>

    <ItemGroup>
        <Content Update="appsettings.Development.json">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
    </ItemGroup>

    <!-- Email Templates as Embedded Resources -->
    <ItemGroup>
        <EmbeddedResource Include="Services\Email\Templates\**\*.cshtml" />
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
        <None Include="..\assets\icons\infrastructure-icon.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AppBlueprint.Application\AppBlueprint.Application.csproj" />
        <ProjectReference Include="..\AppBlueprint.Domain\AppBlueprint.Domain.csproj" />
    </ItemGroup>

</Project>
