@using AppBlueprint.Contracts.Baseline.Email
@model PasswordResetEmailModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Reset Your Password";
    ViewBag.CompanyName = "AppBlueprint";
    ViewBag.RecipientEmail = Model.EmailAddress;
}

<h2>Password Reset Request</h2>

<p>
    Hi @Model.UserName,
</p>

<p>
    We received a request to reset your password. If you didn't make this request, you can safely ignore this email.
</p>

<p>
    To reset your password, click the button below:
</p>

<div style="text-align: center;">
    <a href="@Model.ResetLink" class="button">Reset Password</a>
</div>

<p class="text-muted" style="font-size: 12px;">
    If the button doesn't work, copy and paste this link into your browser:<br>
    <a href="@Model.ResetLink">@Model.ResetLink</a>
</p>

<p style="color: #dc2626; font-weight: 600;">
    ⚠️ This link will expire on @Model.ExpiresAt.ToString("MMMM dd, yyyy 'at' HH:mm 'UTC'")
</p>

<p class="text-muted" style="font-size: 14px; margin-top: 30px;">
    For security reasons, if you didn't request a password reset, please contact our support team immediately.
</p>

<p style="margin-top: 30px;">
    Best regards,<br>
    <strong>The Security Team</strong>
</p>
