<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <!-- Basic Project Properties -->
        <TargetFramework>net10.0</TargetFramework>
        <LangVersion>latestmajor</LangVersion>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- NuGet Package Configuration -->
        <Version>$(GITVERSION_SemVer)</Version>
        <PackageId>SaaS-Factory.AppBlueprint.Contracts</PackageId>
        <Authors>Casper Rubæk</Authors>
        <Description>API contracts library with request/response DTOs for client-server communication</Description>
        <PackageTags>contracts dto request response api data-transfer-objects</PackageTags>
        <PackageProjectUrl>https://github.com/saas-factory-labs/Saas-Factory/blob/main/Code/AppBlueprint/Shared-Modules/AppBlueprint.Contracts/README.md</PackageProjectUrl>
        <RepositoryUrl>https://github.com/saas-factory-labs/Saas-Factory</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Admin\"/>
        <Folder Include="B2B\"/>
        <Folder Include="B2C\"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AppBlueprint.SharedKernel\AppBlueprint.SharedKernel.csproj"/>
    </ItemGroup>

</Project>
