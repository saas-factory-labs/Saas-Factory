@namespace AppBlueprint.UiKit.Components.Shared

@* Filter section component for grouping related filter options *@

<div class="mb-4 last:mb-0">
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase mb-2">@Title</div>
    }
    <div class="space-y-2">
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
