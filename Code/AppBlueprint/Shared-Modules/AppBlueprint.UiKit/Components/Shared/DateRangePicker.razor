@* Enhanced Date Range Picker with presets and calendar *@

<div class="relative inline-flex">
    <button type="button"
            class="@GetButtonClasses()"
            @onclick="ToggleDropdown">
        <svg class="fill-current text-gray-400 dark:text-gray-500 mr-2 shrink-0" width="16" height="16" viewBox="0 0 16 16">
            <path d="M5 4a1 1 0 0 0 0 2h6a1 1 0 1 0 0-2H5Z" />
            <path d="M4 0a4 4 0 0 0-4 4v8a4 4 0 0 0 4 4h8a4 4 0 0 0 4-4V4a4 4 0 0 0-4-4H4ZM2 4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V4Z" />
        </svg>
        <span class="text-gray-600 dark:text-gray-300">@DisplayText</span>
        <svg class="shrink-0 ml-2 fill-current text-gray-400 dark:text-gray-500" width="12" height="12" viewBox="0 0 12 12">
            <path d="M5.9 11.4L.5 6l1.4-1.4 4 4 4-4L11.3 6z" />
        </svg>
    </button>

    @if (IsOpen)
    {
        @* Backdrop *@
        <div class="fixed inset-0 z-40" @onclick="Close"></div>

        @* Dropdown panel *@
        <div class="@GetDropdownClasses()">
            <div class="flex">
                @* Preset ranges *@
                <div class="py-3 border-r border-gray-200 dark:border-gray-700/60">
                    <div class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase px-3 mb-2">Quick Select</div>
                    <ul class="min-w-[140px]">
                        @foreach (var preset in Presets)
                        {
                            <li>
                                <button type="button"
                                        class="@GetPresetClasses(preset.Key)"
                                        @onclick="() => SelectPreset(preset.Key)">
                                    @preset.Key
                                </button>
                            </li>
                        }
                    </ul>
                </div>

                @* Calendar section *@
                <div class="p-3">
                    <div class="flex items-center justify-between mb-3">
                        <button type="button" class="p-1 hover:bg-gray-100 dark:hover:bg-gray-700 rounded" @onclick="PreviousMonth">
                            <svg class="fill-current text-gray-400 dark:text-gray-500" width="16" height="16" viewBox="0 0 16 16">
                                <path d="M9.4 13.4l1.4-1.4-4-4 4-4-1.4-1.4L4 8z" />
                            </svg>
                        </button>
                        <span class="text-sm font-semibold text-gray-800 dark:text-gray-100">
                            @CurrentMonth.ToString("MMMM yyyy")
                        </span>
                        <button type="button" class="p-1 hover:bg-gray-100 dark:hover:bg-gray-700 rounded" @onclick="NextMonth">
                            <svg class="fill-current text-gray-400 dark:text-gray-500" width="16" height="16" viewBox="0 0 16 16">
                                <path d="M6.6 13.4L5.2 12l4-4-4-4 1.4-1.4L12 8z" />
                            </svg>
                        </button>
                    </div>

                    @* Days header *@
                    <div class="grid grid-cols-7 gap-1 text-center mb-1">
                        @foreach (var day in new[] { "Su", "Mo", "Tu", "We", "Th", "Fr", "Sa" })
                        {
                            <div class="text-xs font-medium text-gray-500 dark:text-gray-400 w-8 py-1">@day</div>
                        }
                    </div>

                    @* Calendar days *@
                    <div class="grid grid-cols-7 gap-1">
                        @foreach (var day in CalendarDays)
                        {
                            <button type="button"
                                    class="@GetDayClasses(day)"
                                    disabled="@(!day.IsCurrentMonth)"
                                    @onclick="() => SelectDate(day.Date)">
                                @day.Date.Day
                            </button>
                        }
                    </div>

                    @* Selected range display *@
                    <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700/60">
                        <div class="flex items-center gap-2 text-sm">
                            <div class="flex-1">
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Start Date</label>
                                <input type="date"
                                       class="form-input w-full text-sm py-1.5"
                                       value="@StartDate?.ToString("yyyy-MM-dd")"
                                       @onchange="OnStartDateChange" />
                            </div>
                            <span class="text-gray-400 dark:text-gray-500 mt-5">â†’</span>
                            <div class="flex-1">
                                <label class="block text-xs text-gray-500 dark:text-gray-400 mb-1">End Date</label>
                                <input type="date"
                                       class="form-input w-full text-sm py-1.5"
                                       value="@EndDate?.ToString("yyyy-MM-dd")"
                                       @onchange="OnEndDateChange" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @* Footer *@
            <div class="px-3 py-2 border-t border-gray-200 dark:border-gray-700/60 bg-gray-50 dark:bg-gray-700/20 flex justify-between">
                <button type="button"
                        class="btn-xs bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700/60 hover:border-gray-300 dark:hover:border-gray-600 text-red-500"
                        @onclick="Clear">
                    Clear
                </button>
                <button type="button"
                        class="btn-xs bg-violet-500 hover:bg-violet-600 text-white"
                        @onclick="Apply">
                    Apply
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public DateTime? StartDate { get; set; }
    [Parameter] public EventCallback<DateTime?> StartDateChanged { get; set; }
    [Parameter] public DateTime? EndDate { get; set; }
    [Parameter] public EventCallback<DateTime?> EndDateChanged { get; set; }
    [Parameter] public EventCallback<(DateTime? Start, DateTime? End)> OnRangeChanged { get; set; }
    [Parameter] public string Align { get; set; } = "left"; // left, right

    private bool IsOpen { get; set; }
    private DateTime CurrentMonth { get; set; } = DateTime.Today;
    private string? SelectedPreset { get; set; }
    private DateTime? TempStartDate { get; set; }
    private DateTime? TempEndDate { get; set; }
    private bool SelectingEndDate { get; set; };

    private Dictionary<string, (DateTime Start, DateTime End)> Presets => new()
    {
        { "Today", (DateTime.Today, DateTime.Today) },
        { "Yesterday", (DateTime.Today.AddDays(-1), DateTime.Today.AddDays(-1)) },
        { "Last 7 Days", (DateTime.Today.AddDays(-6), DateTime.Today) },
        { "Last 30 Days", (DateTime.Today.AddDays(-29), DateTime.Today) },
        { "This Month", (new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1), DateTime.Today) },
        { "Last Month", (new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1).AddMonths(-1), new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1).AddDays(-1)) },
        { "This Quarter", (GetQuarterStart(DateTime.Today), DateTime.Today) },
        { "This Year", (new DateTime(DateTime.Today.Year, 1, 1), DateTime.Today) }
    };

    private static DateTime GetQuarterStart(DateTime date)
    {
        var quarter = (date.Month - 1) / 3;
        return new DateTime(date.Year, quarter * 3 + 1, 1);
    }

    private string DisplayText
    {
        get
        {
            if (StartDate.HasValue && EndDate.HasValue)
            {
                if (StartDate.Value == EndDate.Value)
                    return StartDate.Value.ToString("MMM d, yyyy");
                return $"{StartDate.Value:MMM d} - {EndDate.Value:MMM d, yyyy}";
            }
            return "Select date range";
        }
    }

    private List<CalendarDay> CalendarDays
    {
        get
        {
            var days = new List<CalendarDay>();
            var firstOfMonth = new DateTime(CurrentMonth.Year, CurrentMonth.Month, 1);
            var startDay = firstOfMonth.AddDays(-(int)firstOfMonth.DayOfWeek);

            for (int i = 0; i < 42; i++)
            {
                var date = startDay.AddDays(i);
                days.Add(new CalendarDay
                {
                    Date = date,
                    IsCurrentMonth = date.Month == CurrentMonth.Month,
                    IsSelected = IsDateSelected(date),
                    IsInRange = IsDateInRange(date),
                    IsToday = date == DateTime.Today
                });
            }
            return days;
        }
    }

    private bool IsDateSelected(DateTime date) =>
        (TempStartDate.HasValue && date == TempStartDate.Value) ||
        (TempEndDate.HasValue && date == TempEndDate.Value);

    private bool IsDateInRange(DateTime date)
    {
        if (!TempStartDate.HasValue || !TempEndDate.HasValue) return false;
        return date > TempStartDate.Value && date < TempEndDate.Value;
    }

    protected override void OnInitialized()
    {
        TempStartDate = StartDate;
        TempEndDate = EndDate;
    }

    private void ToggleDropdown()
    {
        IsOpen = !IsOpen;
        if (IsOpen)
        {
            TempStartDate = StartDate;
            TempEndDate = EndDate;
            CurrentMonth = StartDate ?? DateTime.Today;
        }
    }

    private void Close() => IsOpen = false;

    private void PreviousMonth() => CurrentMonth = CurrentMonth.AddMonths(-1);

    private void NextMonth() => CurrentMonth = CurrentMonth.AddMonths(1);

    private void SelectPreset(string presetName)
    {
        if (Presets.TryGetValue(presetName, out var range))
        {
            TempStartDate = range.Start;
            TempEndDate = range.End;
            SelectedPreset = presetName;
            CurrentMonth = range.Start;
        }
    }

    private void SelectDate(DateTime date)
    {
        if (!SelectingEndDate || !TempStartDate.HasValue)
        {
            TempStartDate = date;
            TempEndDate = null;
            SelectingEndDate = true;
            SelectedPreset = null;
        }
        else
        {
            if (date < TempStartDate.Value)
            {
                TempEndDate = TempStartDate;
                TempStartDate = date;
            }
            else
            {
                TempEndDate = date;
            }
            SelectingEndDate = false;
            SelectedPreset = null;
        }
    }

    private void OnStartDateChange(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            TempStartDate = date;
            SelectedPreset = null;
        }
    }

    private void OnEndDateChange(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            TempEndDate = date;
            SelectedPreset = null;
        }
    }

    private async Task Clear()
    {
        TempStartDate = null;
        TempEndDate = null;
        SelectedPreset = null;
        await ApplyChanges(null, null);
    }

    private async Task Apply()
    {
        await ApplyChanges(TempStartDate, TempEndDate);
        IsOpen = false;
    }

    private async Task ApplyChanges(DateTime? start, DateTime? end)
    {
        StartDate = start;
        EndDate = end;
        await StartDateChanged.InvokeAsync(start);
        await EndDateChanged.InvokeAsync(end);
        await OnRangeChanged.InvokeAsync((start, end));
    }

    private string GetButtonClasses() =>
        "btn px-3 bg-white dark:bg-gray-800 border-gray-200 hover:border-gray-300 dark:border-gray-700/60 dark:hover:border-gray-600";

    private string GetDropdownClasses()
    {
        var alignClass = Align == "right" ? "right-0" : "left-0";
        return $"absolute z-50 top-full {alignClass} mt-1 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700/60 rounded-lg shadow-lg overflow-hidden";
    }

    private string GetPresetClasses(string presetName)
    {
        const string baseClasses = "w-full px-3 py-1.5 text-left text-sm";
        if (presetName == SelectedPreset)
            return $"{baseClasses} bg-violet-50 dark:bg-violet-500/10 text-violet-600 dark:text-violet-400 font-medium";
        return $"{baseClasses} text-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700/50";
    }

    private string GetDayClasses(CalendarDay day)
    {
        const string baseClasses = "w-8 h-8 text-sm rounded-full transition-colors";

        if (!day.IsCurrentMonth)
            return $"{baseClasses} text-gray-300 dark:text-gray-600 cursor-default";

        if (day.IsSelected)
            return $"{baseClasses} bg-violet-500 text-white font-medium";

        if (day.IsInRange)
            return $"{baseClasses} bg-violet-100 dark:bg-violet-500/20 text-violet-600 dark:text-violet-400";

        if (day.IsToday)
            return $"{baseClasses} border border-violet-500 text-violet-600 dark:text-violet-400 hover:bg-violet-50 dark:hover:bg-violet-500/10";

        return $"{baseClasses} text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700";
    }

    private class CalendarDay
    {
        public DateTime Date { get; set; }
        public bool IsCurrentMonth { get; set; }
        public bool IsSelected { get; set; }
        public bool IsInRange { get; set; }
        public bool IsToday { get; set; }
    }
}
