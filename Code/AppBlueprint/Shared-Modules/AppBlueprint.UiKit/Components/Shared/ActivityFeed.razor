@* Activity Feed component with timeline *@

<div class="@GetContainerClasses()">
    @* Header *@
    @if (!string.IsNullOrEmpty(Title))
    {
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">@Title</h3>
            @if (HeaderActions != null)
            {
                @HeaderActions
            }
        </div>
    }

    @* Feed items *@
    <div class="@GetFeedClasses()">
        @if (Activities.Any())
        {
            @foreach (var (activity, index) in Activities.Select((a, i) => (a, i)))
            {
                var isLast = index == Activities.Count - 1;

                <div class="relative flex gap-4 @(isLast ? "" : "pb-6")">
                    @* Timeline line *@
                    @if (ShowTimeline && !isLast)
                    {
                        <div class="absolute left-5 top-10 bottom-0 w-px bg-gray-200 dark:bg-gray-700"></div>
                    }

                    @* Icon/Avatar *@
                    <div class="relative flex-shrink-0">
                        @if (!string.IsNullOrEmpty(activity.AvatarUrl))
                        {
                            <img src="@activity.AvatarUrl" alt="@activity.UserName" class="w-10 h-10 rounded-full object-cover ring-4 ring-white dark:ring-gray-800" />
                        }
                        else
                        {
                            <div class="w-10 h-10 rounded-full flex items-center justify-center ring-4 ring-white dark:ring-gray-800 @GetIconBgClasses(activity.Type)">
                                @GetActivityIcon(activity.Type)
                            </div>
                        }
                        @if (activity.ShowBadge)
                        {
                            <span class="absolute -bottom-0.5 -right-0.5 w-4 h-4 rounded-full border-2 border-white dark:border-gray-800 @GetBadgeClasses(activity.BadgeType)"></span>
                        }
                    </div>

                    @* Content *@
                    <div class="flex-1 min-w-0 pt-0.5">
                        <div class="flex items-start justify-between gap-2">
                            <div>
                                @if (!string.IsNullOrEmpty(activity.UserName))
                                {
                                    <span class="font-medium text-gray-800 dark:text-gray-100">@activity.UserName</span>
                                    <span class="text-gray-500 dark:text-gray-400"> </span>
                                }
                                <span class="text-gray-600 dark:text-gray-300">@activity.Action</span>
                                @if (!string.IsNullOrEmpty(activity.Target))
                                {
                                    <span class="font-medium text-gray-800 dark:text-gray-100"> @activity.Target</span>
                                }
                            </div>
                            <span class="flex-shrink-0 text-xs text-gray-400 dark:text-gray-500 whitespace-nowrap">@activity.Time</span>
                        </div>

                        @if (!string.IsNullOrEmpty(activity.Description))
                        {
                            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">@activity.Description</p>
                        }

                        @if (activity.Attachment != null)
                        {
                            <div class="mt-2 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg">
                                @if (activity.Attachment.Type == "image")
                                {
                                    <img src="@activity.Attachment.Url" alt="Attachment" class="rounded-lg max-w-xs" />
                                }
                                else if (activity.Attachment.Type == "file")
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-lg bg-gray-200 dark:bg-gray-600 flex items-center justify-center">
                                            <svg class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                            </svg>
                                        </div>
                                        <div>
                                            <div class="text-sm font-medium text-gray-700 dark:text-gray-300">@activity.Attachment.Name</div>
                                            <div class="text-xs text-gray-500 dark:text-gray-400">@activity.Attachment.Size</div>
                                        </div>
                                    </div>
                                }
                                else if (activity.Attachment.Type == "comment")
                                {
                                    <p class="text-sm text-gray-600 dark:text-gray-300 italic">"@activity.Attachment.Content"</p>
                                }
                            </div>
                        }

                        @if (activity.Actions != null && activity.Actions.Any())
                        {
                            <div class="mt-2 flex items-center gap-3">
                                @foreach (var action in activity.Actions)
                                {
                                    <button type="button"
                                            class="text-sm text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300 font-medium"
                                            @onclick="() => OnActionClick.InvokeAsync(action)">
                                        @action.Label
                                    </button>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                <svg class="mx-auto h-12 w-12 text-gray-300 dark:text-gray-600 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
                <p>No activity yet</p>
            </div>
        }
    </div>

    @* Load more *@
    @if (ShowLoadMore && Activities.Any())
    {
        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 text-center">
            <button type="button"
                    class="text-sm font-medium text-violet-600 dark:text-violet-400 hover:text-violet-700 dark:hover:text-violet-300"
                    @onclick="OnLoadMore">
                Load more activity
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public List<ActivityItem> Activities { get; set; } = new();
    [Parameter] public bool ShowTimeline { get; set; } = true;
    [Parameter] public bool ShowLoadMore { get; set; } = false;
    [Parameter] public RenderFragment? HeaderActions { get; set; }
    [Parameter] public EventCallback OnLoadMore { get; set; }
    [Parameter] public EventCallback<ActivityAction> OnActionClick { get; set; }
    [Parameter] public string? Class { get; set; }

    private string GetContainerClasses()
    {
        return $"bg-white dark:bg-gray-800 rounded-xl p-5 {Class}".Trim();
    }

    private string GetFeedClasses()
    {
        return "space-y-0";
    }

    private string GetIconBgClasses(string? type)
    {
        return type switch
        {
            "success" => "bg-green-100 dark:bg-green-500/20 text-green-600 dark:text-green-400",
            "warning" => "bg-yellow-100 dark:bg-yellow-500/20 text-yellow-600 dark:text-yellow-400",
            "error" => "bg-red-100 dark:bg-red-500/20 text-red-600 dark:text-red-400",
            "info" => "bg-blue-100 dark:bg-blue-500/20 text-blue-600 dark:text-blue-400",
            _ => "bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400"
        };
    }

    private string GetBadgeClasses(string? type)
    {
        return type switch
        {
            "online" => "bg-green-500",
            "away" => "bg-yellow-500",
            "busy" => "bg-red-500",
            _ => "bg-gray-400"
        };
    }

    private RenderFragment GetActivityIcon(string? type) => type switch
    {
        "success" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>,
        "warning" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>,
        "error" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" /></svg>,
        "info" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>,
        "comment" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" /></svg>,
        "upload" => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" /></svg>,
        _ => @<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
    };

    public class ActivityItem
    {
        public string? UserName { get; set; }
        public string? AvatarUrl { get; set; }
        public string Action { get; set; } = "";
        public string? Target { get; set; }
        public string? Description { get; set; }
        public string Time { get; set; } = "";
        public string? Type { get; set; }
        public bool ShowBadge { get; set; } = false;
        public string? BadgeType { get; set; }
        public ActivityAttachment? Attachment { get; set; }
        public List<ActivityAction>? Actions { get; set; }
    }

    public class ActivityAttachment
    {
        public string Type { get; set; } = ""; // image, file, comment
        public string? Url { get; set; }
        public string? Name { get; set; }
        public string? Size { get; set; }
        public string? Content { get; set; }
    }

    public class ActivityAction
    {
        public string Id { get; set; } = "";
        public string Label { get; set; } = "";
    }
}
