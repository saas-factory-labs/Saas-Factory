@if (ModalOpen)
{
    <!-- Modal backdrop -->
    <div class="fixed inset-0 bg-gray-900/30 z-50 transition-opacity" aria-hidden="true" @onclick="CloseModal"></div>

    <!-- Modal dialog -->
    <div class="fixed inset-0 z-50 overflow-hidden flex items-center my-4 justify-center px-4 sm:px-6" role="dialog" aria-modal="true">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-auto max-w-lg w-full max-h-full" @onclick:stopPropagation="true">
            <div class="p-5">
                <!-- Modal header -->
                <div class="mb-2">
                    <div class="flex justify-between items-center">
                        <div class="text-lg font-semibold text-gray-800 dark:text-gray-100">@Title</div>
                        <button class="text-gray-400 dark:text-gray-500 hover:text-gray-500 dark:hover:text-gray-400" @onclick="CloseModal">
                            <div class="sr-only">Close</div>
                            <svg class="fill-current" width="16" height="16" viewBox="0 0 16 16">
                                <path d="M7.95 6.536l4.242-4.243a1 1 0 111.415 1.414L9.364 7.95l4.243 4.242a1 1 0 11-1.415 1.415L7.95 9.364l-4.243 4.243a1 1 0 01-1.414-1.415L6.536 7.95 2.293 3.707a1 1 0 011.414-1.414L7.95 6.536z" />
                            </svg>
                        </button>
                    </div>
                </div>
                @ChildContent
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public bool ModalOpen { get; set; }
    [Parameter] public EventCallback OnCloseModal { get; set; }

    private async Task CloseModal()
    {
        await OnCloseModal.InvokeAsync();
    }
}
