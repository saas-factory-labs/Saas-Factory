@using AppBlueprint.UiKit.Components.Layout

@*
    SidebarMenuGroup - A reusable collapsible menu group for sidebar navigation
    
    Cross-Domain Examples:
    - E-commerce: Product Management (catalog, inventory, pricing), Customer Management (contacts, orders, support tickets)
    - CRM: Sales Pipeline (leads, opportunities, deals), Marketing (campaigns, analytics, automation)
    - Dating app: Discovery (browse profiles, advanced search, filters), Social (messages, likes, matches)
    - Project management: Projects (active, archived, templates), Reports (time tracking, budget, progress)
    
    Features:
    - Collapsible group with expand/collapse animation
    - Icon with customizable color based on active state
    - Child menu items with indentation
    - Responsive text that fades on collapsed sidebar
    - Rotation animation on expand/collapse chevron
    - Dark mode support
*@

<SidebarLinkGroup ActiveCondition="@IsActive">
    <ChildContent Context="groupContext">
        <a class="block text-gray-800 dark:text-gray-100 truncate transition duration-150 @(IsActive ? "" : "hover:text-gray-900 dark:hover:text-white") cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 rounded py-2"
           href="#"
           @onclick="@(() => groupContext.HandleClick())"
           @onclick:preventDefault="true">
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <svg class="shrink-0 fill-current @(IsActive ? "text-violet-500" : "text-gray-400 dark:text-gray-500")"
                         xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                        @IconPath
                    </svg>
                    <span class="text-sm font-medium ml-4 lg:opacity-0 lg:sidebar-expanded:opacity-100 2xl:opacity-100 duration-200">@Label</span>
                </div>
                <div class="flex shrink-0 ml-2">
                    <svg class="w-3 h-3 shrink-0 ml-1 fill-current text-gray-400 dark:text-gray-500 @(groupContext.Expanded ? "rotate-180" : "")" viewBox="0 0 12 12">
                        <path d="M5.9 11.4L.5 6l1.4-1.4 4 4 4-4L11.3 6z"/>
                    </svg>
                </div>
            </div>
        </a>
        <div class="lg:hidden lg:sidebar-expanded:block 2xl:block">
            <ul class="pl-8 mt-1 @(groupContext.Expanded ? "" : "hidden")">
                @ChildMenuItems(groupContext)
            </ul>
        </div>
    </ChildContent>
</SidebarLinkGroup>

@code {
    /// <summary>
    /// The display label for the menu group
    /// </summary>
    [Parameter, EditorRequired]
    public string Label { get; set; } = string.Empty;

    /// <summary>
    /// SVG path data for the icon (just the <path> elements)
    /// </summary>
    [Parameter, EditorRequired]
    public RenderFragment IconPath { get; set; } = default!;

    /// <summary>
    /// Whether any child in this group is currently active
    /// </summary>
    [Parameter]
    public bool IsActive { get; set; }

    /// <summary>
    /// Child menu items to display when expanded (receives context for handling clicks)
    /// </summary>
    [Parameter, EditorRequired]
    public RenderFragment<SidebarLinkGroup.Context> ChildMenuItems { get; set; } = default!;
}
