@* @using MudBlazor

<MudPaper Class="doc-section-component-container">
    <MudChart ChartType="ChartType.Bar"
              ChartSeries="_series"
              XAxisLabels="_xAxisLabels"
              @bind-SelectedIndex="_index"
              Width="_width"
              Height="_height"
              ChartOptions="_chartOptions" />
</MudPaper>

<MudGrid>
    <MudItem xs="6">
        <MudText Typo="Typo.body1" Class="py-3">
            Selected: @(_index < 0 ? "None" : _series[_index].Name)
        </MudText>
    </MudItem>

    <MudItem md="6" xs="12">
        <MudCheckBox @bind-Value="_chartOptions.MatchBoundsToSize"
                     Label="MatchBoundsToSize"
                     Color="Color.Primary" />
    </MudItem>

    <MudItem md="6" xs="12">
        <MudTextField @bind-Value="_width" Label="Chart Width" />
    </MudItem>

    <MudItem md="6" xs="12">
        <MudTextField @bind-Value="_height" Label="Chart Height" />
    </MudItem>

    <MudItem md="6" xs="12">
        <MudStack>
            <MudText Typo="Typo.body1">XAxis Label Rotation</MudText>
            <MudSlider @bind-Value="_chartOptions.XAxisLabelRotation"
                       Min="0" Max="90" Step="15" />
        </MudStack>
    </MudItem>
</MudGrid>

