<div class="flex flex-col col-span-full xl:col-span-8 bg-white dark:bg-gray-800 shadow-xs rounded-xl">
    <header class="px-5 py-4 border-b border-gray-100 dark:border-gray-700/60 flex items-center">
        <h2 class="font-semibold text-gray-800 dark:text-gray-100">Analytics</h2>
    </header>
    <div class="px-5 py-1">
        <div class="flex flex-wrap max-sm:*:w-1/2">
            <!-- Unique Visitors -->
            <div class="flex items-center py-2">
                <MetricCard 
                    Value="24.7M"
                    Label="Unique Visitors"
                    Trend="49"
                    Suffix="K"
                    ValueFormat="F1"
                    Class="mr-5" />
                <div class="hidden md:block w-px h-8 bg-gray-200 dark:bg-gray-700 mr-5" aria-hidden="true"></div>
            </div>
            <!-- Total Pageviews -->
            <div class="flex items-center py-2">
                <MetricCard 
                    Value="56.9M"
                    Label="Total Pageviews"
                    Trend="7"
                    Suffix="K"
                    ValueFormat="F1"
                    Class="mr-5" />
                <div class="hidden md:block w-px h-8 bg-gray-200 dark:bg-gray-700 mr-5" aria-hidden="true"></div>
            </div>
            <!-- Bounce Rate -->
            <div class="flex items-center py-2">
                <MetricCard 
                    Value="54"
                    Label="Bounce Rate"
                    Trend="-7"
                    Suffix="%"
                    ValueFormat="F0"
                    Class="mr-5" />
                <div class="hidden md:block w-px h-8 bg-gray-200 dark:bg-gray-700 mr-5" aria-hidden="true"></div>
            </div>
            <!-- Visit Duration -->
            <div class="flex items-center">
                <MetricCard 
                    CustomValue="2m 56s"
                    Label="Visit Duration"
                    Trend="7"
                    Class="" />
            </div>
        </div>
    </div>
    <!-- Chart -->
    <div class="grow">
        <LineChart
            CanvasId="analytics-card-01-chart"
            Labels="@labels"
            Datasets="@datasets"
            Width="800"
            Height="300"
            ShowXAxis="true"
            ShowYAxis="true"
            UseTimeScale="true" />
    </div>
</div>

