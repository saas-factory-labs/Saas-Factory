@inject AppBlueprint.UiKit.Services.ThemeService ThemeService

<div class="flex flex-col col-span-full sm:col-span-6 xl:col-span-4 bg-white dark:bg-gray-800 shadow-xs rounded-xl">
    <header class="px-5 py-4 border-b border-gray-100 dark:border-gray-700/60">
        <h2 class="font-semibold text-gray-800 dark:text-gray-100">Top Channels</h2>
    </header>
    <div class="grow p-3">
        <div class="flex flex-col h-full">
            <!-- Card content -->
            <div class="grow">
                <ul class="flex justify-between text-xs uppercase text-gray-400 dark:text-gray-500 font-semibold px-2 space-x-2">
                    <li>Source</li>
                    <li>Visitors</li>
                </ul>

                <ul class="space-y-1 text-sm text-gray-800 dark:text-gray-100 mt-3 mb-4">
                    <ProgressListItem Label="Google" Value="4.7K" ProgressPercentage="82" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Indiehackers.com" Value="4.2K" ProgressPercentage="70" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="DuckDuckGo" Value="3.4K" ProgressPercentage="60" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Hacker News" Value="3.1K" ProgressPercentage="44" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Github.com" Value="2.2K" ProgressPercentage="40" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Madewithvuejs.com" Value="1.7K" ProgressPercentage="30" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Producthunt.com" Value="924" ProgressPercentage="22" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                    <ProgressListItem Label="Dev.to" Value="696" ProgressPercentage="12" Color="@ThemeService.CurrentTheme.PrimaryColor" />
                </ul>
            </div>
            <!-- Card footer -->
            <div class="text-center pt-4 pb-1 border-t border-gray-100 dark:border-gray-700/60">
                <a class="@ThemeService.GetLinkClasses()" href="#0">Channels Report -&gt;</a>
            </div>
        </div>
    </div>
</div>

