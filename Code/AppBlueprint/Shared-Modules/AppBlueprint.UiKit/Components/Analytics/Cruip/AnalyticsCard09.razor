<ChartCard 
    Title="Sessions By Age"
    GridColumnClass="sm:col-span-6 xl:col-span-4"
    ContentClass="grow flex flex-col justify-center p-5">
    <AppBlueprint.UiKit.Components.Charts.DoughnutChart
        CanvasId="analytics-card-09-chart"
        Labels="@labels"
        Data="@data"
        BackgroundColors="@backgroundColors"
        HoverBackgroundColors="@hoverBackgroundColors"
        Width="389"
        Height="260"
        Cutout="80%" />
</ChartCard>

@code {
    private List<string> labels = new() { "<18", "18-24", "24-36", ">35" };
    private List<double> data = new() { 30, 50, 5, 15 };
    private List<string> backgroundColors = new()
    {
        "rgb(139, 92, 246)",   // violet-500
        "rgb(14, 165, 233)",   // sky-500
        "rgb(244, 63, 94)",    // rose-500
        "rgb(34, 197, 94)"     // green-500
    };
    private List<string> hoverBackgroundColors = new()
    {
        "rgb(124, 58, 237)",   // violet-600
        "rgb(2, 132, 199)",    // sky-600
        "rgb(225, 29, 72)",    // rose-600
        "rgb(22, 163, 74)"     // green-600
    };
}
