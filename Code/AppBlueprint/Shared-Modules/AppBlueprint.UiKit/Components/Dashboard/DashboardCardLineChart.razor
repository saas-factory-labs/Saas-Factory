<!-- Line Chart Container -->
<MudItem xs="12" sm="6" md="4">
    <MudPaper Elevation="2" Class="pa-4 overflow-auto" Style="height: 300px; max-height: 300px;">
        <MudChart ChartType="ChartType.Line" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%"
                  Height="100%"/>
    </MudPaper>
</MudItem>

@code {

    // private int Index = -1; //default value cannot be 0 -> first selectedindex is 0.
    public ChartOptions Options = new();

    public List<ChartSeries> Series = new()
    {
        new ChartSeries { Data = new double[] { 90, 79, 72, 69, 62, 62, 55, 65, 70 } }
        // new ChartSeries() { Data = new double[] { 10, 41, 35, 51, 49, 62, 69, 91, 148 } },
    };

    public string[] XAxisLabels = { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep" };
}
