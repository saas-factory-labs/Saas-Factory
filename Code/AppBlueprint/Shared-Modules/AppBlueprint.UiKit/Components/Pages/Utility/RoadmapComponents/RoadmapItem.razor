<li class="relative py-2">
    <div class="flex items-center mb-1">
        @if (ShowConnector)
        {
            <div class="absolute left-0 h-full w-0.5 bg-gray-200 dark:bg-gray-700 self-start ml-2.5 -translate-x-1/2 translate-y-3" aria-hidden="true"></div>
        }
        <div class="absolute left-0 @IconWrapperClasses" aria-hidden="true">
            @if (IsCompleted)
            {
                <svg class="fill-current text-white" width="20" height="20" viewBox="0 0 20 20">
                    <path d="M14.4 8.4L13 7l-4 4-2-2-1.4 1.4L9 13.8z" />
                </svg>
            }
            else
            {
                <svg class="fill-current text-gray-200 dark:text-gray-700" width="20" height="20" viewBox="0 0 20 20">
                    <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm0 2C4.477 20 0 15.523 0 10S4.477 0 10 0s10 4.477 10 10-4.477 10-10 10z" />
                </svg>
            }
        </div>
        <h3 class="text-lg font-bold text-gray-800 dark:text-gray-100 pl-9">@Title</h3>
    </div>
    <div class="pl-9">@Description</div>
</li>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = string.Empty;
    [Parameter, EditorRequired] public string Description { get; set; } = string.Empty;
    [Parameter] public bool IsCompleted { get; set; }
    [Parameter] public bool ShowConnector { get; set; } = true;

    private string IconWrapperClasses => IsCompleted 
        ? "rounded-full bg-violet-500" 
        : "rounded-full bg-white dark:bg-gray-900";
}
