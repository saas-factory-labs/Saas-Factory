    private List<LineChart.ChartDataset> lineChartDatasets2 = new()
    {
        new LineChart.ChartDataset 
        { 
            Label = "Revenue",
            Data = new List<double> { 3500, 4200, 4800, 5100, 5400, 6000 },
            BorderColor = "rgb(236, 72, 153)",
