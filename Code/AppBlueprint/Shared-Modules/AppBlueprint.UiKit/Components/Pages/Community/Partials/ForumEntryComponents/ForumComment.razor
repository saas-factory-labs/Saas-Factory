<li class="relative pl-9 space-y-5">
    <!-- Comment wrapper -->
    <div class="flex items-start">
        <ForumCommentUpvoteButton Votes="@Votes" IsUpvoted="@IsUpvoted" />
        <!-- Comment content -->
        <div>
            <!-- Comment text -->
            <div class="grow text-sm text-gray-800 dark:text-gray-100 space-y-2 mb-2">
                @CommentContent
            </div>
            <!-- Comment footer -->
            <ForumCommentFooter AuthorName="@AuthorName" AvatarUrl="@AvatarUrl" />
        </div>
    </div>
    @if (NestedComments != null)
    {
        <!-- Nested comments -->
        <ul class="space-y-5">
            @NestedComments
        </ul>
    }
</li>

@code {
    [Parameter, EditorRequired] public int Votes { get; set; }
    [Parameter] public bool IsUpvoted { get; set; }
    [Parameter, EditorRequired] public string AuthorName { get; set; } = string.Empty;
    [Parameter, EditorRequired] public string AvatarUrl { get; set; } = string.Empty;
    [Parameter, EditorRequired] public RenderFragment CommentContent { get; set; } = default!;
    [Parameter] public RenderFragment? NestedComments { get; set; }
}
