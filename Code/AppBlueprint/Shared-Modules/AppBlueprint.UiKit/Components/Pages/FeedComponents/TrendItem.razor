@* Trend item showing trending topic title and comment count *@

<li>
    <div class="text-sm mb-1">
        <a class="font-medium text-gray-800 hover:text-gray-900 dark:text-gray-100 dark:hover:text-white" href="#">@Title</a>
    </div>
    <div class="text-xs text-gray-500">@CommentCount comments</div>
</li>

@code {
    [Parameter, EditorRequired] public string Title { get; set; } = "";
    [Parameter] public int CommentCount { get; set; }

}
