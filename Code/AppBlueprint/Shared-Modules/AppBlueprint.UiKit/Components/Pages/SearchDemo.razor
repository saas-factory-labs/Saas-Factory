@page "/search-demo"
@using AppBlueprint.Application.Interfaces
@using AppBlueprint.Infrastructure.DatabaseContexts.Baseline.Entities.User
@using AppBlueprint.Infrastructure.DatabaseContexts.Baseline.Entities.Tenant
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Hosting
@using Microsoft.Extensions.Hosting
@inject ISearchService<UserEntity> UserSearchService
@inject ISearchService<TenantEntity> TenantSearchService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IWebHostEnvironment Environment
@inject NavigationManager NavigationManager

<PageTitle>Full-Text Search Demo</PageTitle>

<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">
    
    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold mb-2">
            PostgreSQL Full-Text Search Demo
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
            Test full-text search functionality with tenant isolation. Search automatically filters by your current tenant.
        </p>
    </div>

    <!-- Search Type Selector -->
    <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl mb-6 p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">Search Type</h3>
            <div class="flex space-x-2">
                <button 
                    type="button"
                    @onclick="() => SwitchSearchType(SearchEntityType.Users)"
                    class="px-4 py-2 rounded-lg font-medium transition-colors @(_searchType == SearchEntityType.Users ? "bg-indigo-500 text-white" : "bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300")"
                    disabled="@_isSearching">
                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                    </svg>
                    Users
                </button>
                <button 
                    type="button"
                    @onclick="() => SwitchSearchType(SearchEntityType.Tenants)"
                    class="px-4 py-2 rounded-lg font-medium transition-colors @(_searchType == SearchEntityType.Tenants ? "bg-indigo-500 text-white" : "bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300")"
                    disabled="@_isSearching">
                    <svg class="w-4 h-4 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    Tenants
                </button>
            </div>
        </div>
    </div>

    <!-- Search Input -->
    <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl mb-6 p-6">
        <div class="space-y-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Search Query
                </label>
                <div class="flex space-x-2">
                    <input 
                        type="text" 
                        @bind="_searchQuery" 
                        @bind:event="oninput"
                        @onkeydown="HandleKeyPress"
                        placeholder="@GetPlaceholderText()"
                        class="flex-1 form-input bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-100 rounded-lg px-4 py-2 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                        disabled="@_isSearching"
                    />
                    <button 
                        type="button"
                        @onclick="PerformSearch"
                        disabled="@(_isSearching || string.IsNullOrWhiteSpace(_searchQuery))"
                        class="btn bg-indigo-500 hover:bg-indigo-600 text-white disabled:opacity-50 disabled:cursor-not-allowed px-6 py-2 rounded-lg font-medium transition-colors flex items-center">
                        @if (_isSearching)
                        {
                            <svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                            <span>Searching...</span>
                        }
                        else
                        {
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                            </svg>
                            <span>Search</span>
                        }
                    </button>
                </div>
                <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                    üí° <strong>Tip:</strong> Use operators: <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">laptop & gaming</code> (AND), 
                    <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">laptop | desktop</code> (OR), 
                    <code class="bg-gray-100 dark:bg-gray-700 px-1 rounded">laptop & !refurbished</code> (NOT)
                </p>
            </div>

            <!-- Advanced Options -->
            <details class="group">
                <summary class="cursor-pointer text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-700 dark:hover:text-indigo-300 flex items-center">
                    <svg class="w-4 h-4 mr-1 transform group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    Advanced Options
                </summary>
                <div class="mt-4 pl-5 space-y-3">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Page Size
                            </label>
                            <input 
                                type="number" 
                                @bind="_pageSize" 
                                min="5" 
                                max="100" 
                                class="w-full form-input bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-100 rounded-lg px-3 py-2"
                            />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                Min Relevance
                            </label>
                            <input 
                                type="number" 
                                @bind="_minRelevance" 
                                min="0" 
                                max="1" 
                                step="0.1" 
                                class="w-full form-input bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-100 rounded-lg px-3 py-2"
                            />
                        </div>
                        @if (_searchType == SearchEntityType.Users)
                        {
                            <div>
                                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                                    Filter by Status
                                </label>
                                <select 
                                    @bind="_filterActiveUsers" 
                                    class="w-full form-select bg-white dark:bg-gray-800 border-gray-300 dark:border-gray-600 text-gray-800 dark:text-gray-100 rounded-lg px-3 py-2">
                                    <option value="">All Users</option>
                                    <option value="true">Active Only</option>
                                    <option value="false">Inactive Only</option>
                                </select>
                            </div>
                        }
                    </div>
                </div>
            </details>
        </div>
    </div>

    <!-- Search Results -->
    @if (_hasSearched)
    {
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <!-- Results Header -->
            <div class="flex items-center justify-between mb-4 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div>
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100">
                        Search Results
                    </h3>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                        Found <span class="font-semibold text-indigo-600 dark:text-indigo-400">@_totalResults</span> results in <span class="font-semibold">@_executionTime ms</span>
                    </p>
                </div>
                @if (_totalResults > 0)
                {
                    <div class="text-sm text-gray-600 dark:text-gray-400">
                        Page <span class="font-semibold">@_currentPage</span> of <span class="font-semibold">@_totalPages</span>
                    </div>
                }
            </div>

            <!-- Results List -->
            @if (_totalResults == 0)
            {
                <div class="text-center py-12">
                    <svg class="w-16 h-16 mx-auto mb-4 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                    <h3 class="text-lg font-medium text-gray-800 dark:text-gray-100 mb-2">No results found</h3>
                    <p class="text-gray-600 dark:text-gray-400">Try adjusting your search query or filters</p>
                </div>
            }
            else
            {
                <div class="space-y-4">
                    @if (_searchType == SearchEntityType.Users)
                    {
                        @foreach (var item in _userResults)
                        {
                            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-start space-x-3">
                                        <!-- Avatar -->
                                        <div class="flex-shrink-0">
                                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-500 flex items-center justify-center text-white font-semibold text-lg">
                                                @GetInitials(item.Entity.FirstName, item.Entity.LastName)
                                            </div>
                                        </div>
                                        <!-- User Info -->
                                        <div class="flex-1">
                                            <h4 class="text-base font-semibold text-gray-800 dark:text-gray-100">
                                                @item.Entity.FirstName @item.Entity.LastName
                                            </h4>
                                            <p class="text-sm text-gray-600 dark:text-gray-400">@item.Entity.Email</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-500 mt-1">
                                                <span class="font-medium">Username:</span> @item.Entity.UserName
                                            </p>
                                            @if (item.MatchedTerms.Any())
                                            {
                                                <div class="flex flex-wrap gap-1 mt-2">
                                                    @foreach (var term in item.MatchedTerms)
                                                    {
                                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900/30 dark:text-indigo-300">
                                                            @term
                                                        </span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!-- Score & Status -->
                                    <div class="flex flex-col items-end space-y-2">
                                        <div class="flex items-center space-x-2">
                                            <span class="text-xs text-gray-500 dark:text-gray-400">Relevance:</span>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                                                @item.RelevanceScore.ToString("P0")
                                            </span>
                                        </div>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(item.Entity.IsActive ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300" : "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300")">
                                            @(item.Entity.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        @foreach (var item in _tenantResults)
                        {
                            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                                <div class="flex items-start justify-between">
                                    <div class="flex items-start space-x-3">
                                        <!-- Icon -->
                                        <div class="flex-shrink-0">
                                            <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-500 flex items-center justify-center text-white">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                                </svg>
                                            </div>
                                        </div>
                                        <!-- Tenant Info -->
                                        <div class="flex-1">
                                            <h4 class="text-base font-semibold text-gray-800 dark:text-gray-100">
                                                @item.Entity.Name
                                            </h4>
                                            @if (!string.IsNullOrEmpty(item.Entity.Description))
                                            {
                                                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">@item.Entity.Description</p>
                                            }
                                            <div class="flex flex-wrap gap-x-4 gap-y-1 mt-2 text-xs text-gray-500 dark:text-gray-500">
                                                @if (!string.IsNullOrEmpty(item.Entity.Email))
                                                {
                                                    <span>üìß @item.Entity.Email</span>
                                                }
                                                @if (!string.IsNullOrEmpty(item.Entity.VatNumber))
                                                {
                                                    <span>üè¢ VAT: @item.Entity.VatNumber</span>
                                                }
                                                <span>üè∑Ô∏è @item.Entity.TenantType</span>
                                            </div>
                                            @if (item.MatchedTerms.Any())
                                            {
                                                <div class="flex flex-wrap gap-1 mt-2">
                                                    @foreach (var term in item.MatchedTerms)
                                                    {
                                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                                                            @term
                                                        </span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <!-- Score & Status -->
                                    <div class="flex flex-col items-end space-y-2">
                                        <div class="flex items-center space-x-2">
                                            <span class="text-xs text-gray-500 dark:text-gray-400">Relevance:</span>
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                                                @item.RelevanceScore.ToString("P0")
                                            </span>
                                        </div>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(item.Entity.IsActive ? "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300" : "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300")">
                                            @(item.Entity.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <!-- Pagination -->
                @if (_totalPages > 1)
                {
                    <div class="flex items-center justify-between mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
                        <button 
                            type="button"
                            @onclick="PreviousPage"
                            disabled="@(!_hasPreviousPage || _isSearching)"
                            class="btn bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed px-4 py-2 rounded-lg font-medium transition-colors">
                            ‚Üê Previous
                        </button>
                        <div class="flex space-x-2">
                            @for (int i = Math.Max(1, _currentPage - 2); i <= Math.Min(_totalPages, _currentPage + 2); i++)
                            {
                                int pageNum = i;
                                <button 
                                    type="button"
                                    @onclick="() => GoToPage(pageNum)"
                                    disabled="@_isSearching"
                                    class="px-3 py-2 rounded-lg font-medium transition-colors @(pageNum == _currentPage ? "bg-indigo-500 text-white" : "bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600")">
                                    @pageNum
                                </button>
                            }
                        </div>
                        <button 
                            type="button"
                            @onclick="NextPage"
                            disabled="@(!_hasNextPage || _isSearching)"
                            class="btn bg-white dark:bg-gray-700 border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 disabled:opacity-50 disabled:cursor-not-allowed px-4 py-2 rounded-lg font-medium transition-colors">
                            Next ‚Üí
                        </button>
                    </div>
                }
            }
        </div>
    }

    <!-- Info Card -->
    <div class="mt-6 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-xl p-6">
        <div class="flex items-start space-x-3">
            <svg class="w-6 h-6 text-blue-600 dark:text-blue-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
                <h4 class="text-sm font-semibold text-blue-900 dark:text-blue-100 mb-2">About PostgreSQL Full-Text Search</h4>
                <ul class="text-sm text-blue-800 dark:text-blue-200 space-y-1 list-disc list-inside">
                    <li>Searches use <code class="bg-blue-100 dark:bg-blue-900/50 px-1 rounded">tsvector</code> computed columns with GIN indexes</li>
                    <li>Results are automatically filtered by your tenant (Row-Level Security)</li>
                    <li>Supports English, Spanish, French, and 20+ other languages</li>
                    <li>Zero additional cost - uses your existing PostgreSQL database</li>
                    <li>Handles 100k-1M records per tenant with subsecond latency</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@code {
    private enum SearchEntityType { Users, Tenants }

    // Search state
    private SearchEntityType _searchType = SearchEntityType.Users;
    private string _searchQuery = string.Empty;
    private int _pageSize = 20;
    private float _minRelevance = 0.0f;
    private string _filterActiveUsers = "";
    private bool _isSearching;
    private bool _hasSearched;

    // Results state
    private List<SearchResultItem<UserEntity>> _userResults = new();
    private List<SearchResultItem<TenantEntity>> _tenantResults = new();
    private int _totalResults;
    private int _currentPage = 1;
    private int _totalPages;
    private long _executionTime;
    private bool _hasNextPage;
    private bool _hasPreviousPage;

    protected override void OnInitialized()
    {
        // Redirect to home if running in production - demo pages should not be accessible
        if (Environment.IsProduction())
        {
            NavigationManager.NavigateTo("/", replace: true);
        }
    }

    private string GetPlaceholderText() => _searchType switch
    {
        SearchEntityType.Users => "Search users by name, email, or username...",
        SearchEntityType.Tenants => "Search tenants by name, description, email, or VAT number...",
        _ => "Enter search query..."
    };

    private void SwitchSearchType(SearchEntityType type)
    {
        _searchType = type;
        _hasSearched = false;
        _userResults.Clear();
        _tenantResults.Clear();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_searchQuery) && !_isSearching)
        {
            await PerformSearch();
        }
    }

    private async Task PerformSearch()
    {
        if (string.IsNullOrWhiteSpace(_searchQuery)) return;

        _isSearching = true;
        _currentPage = 1;
        StateHasChanged();

        try
        {
            if (_searchType == SearchEntityType.Users)
            {
                await SearchUsers();
            }
            else
            {
                await SearchTenants();
            }

            _hasSearched = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Search error: {ex.Message}");
        }
        finally
        {
            _isSearching = false;
            StateHasChanged();
        }
    }

    private async Task SearchUsers()
    {
        var query = new SearchQuery
        {
            QueryText = _searchQuery,
            PageSize = _pageSize,
            PageNumber = _currentPage,
            MinRelevanceScore = _minRelevance
        };

        // Add filter if active users filter is set
        if (!string.IsNullOrEmpty(_filterActiveUsers))
        {
            query.Filters["IsActive"] = bool.Parse(_filterActiveUsers);
        }

        SearchResult<UserEntity> result = await UserSearchService.SearchAsync(query);

        _userResults = result.Items.ToList();
        _totalResults = result.TotalCount;
        _totalPages = result.TotalPages;
        _executionTime = result.ExecutionTimeMs;
        _hasNextPage = result.HasNextPage;
        _hasPreviousPage = result.HasPreviousPage;
    }

    private async Task SearchTenants()
    {
        var query = new SearchQuery
        {
            QueryText = _searchQuery,
            PageSize = _pageSize,
            PageNumber = _currentPage,
            MinRelevanceScore = _minRelevance
        };

        SearchResult<TenantEntity> result = await TenantSearchService.SearchAsync(query);

        _tenantResults = result.Items.ToList();
        _totalResults = result.TotalCount;
        _totalPages = result.TotalPages;
        _executionTime = result.ExecutionTimeMs;
        _hasNextPage = result.HasNextPage;
        _hasPreviousPage = result.HasPreviousPage;
    }

    private async Task GoToPage(int page)
    {
        _currentPage = page;
        await PerformSearch();
    }

    private async Task NextPage()
    {
        if (_hasNextPage)
        {
            _currentPage++;
            await PerformSearch();
        }
    }

    private async Task PreviousPage()
    {
        if (_hasPreviousPage)
        {
            _currentPage--;
            await PerformSearch();
        }
    }

    private static string GetInitials(string firstName, string lastName)
    {
        string first = !string.IsNullOrEmpty(firstName) ? firstName[0].ToString() : "";
        string last = !string.IsNullOrEmpty(lastName) ? lastName[0].ToString() : "";
        return (first + last).ToUpperInvariant();
    }
}
