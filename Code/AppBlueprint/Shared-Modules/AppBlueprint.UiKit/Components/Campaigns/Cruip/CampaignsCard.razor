@using System.Linq
@using AppBlueprint.UiKit.Components.Shared

@* Campaign card - Now using modular, reusable components *@

<div class="col-span-full sm:col-span-6 xl:col-span-4 bg-white dark:bg-gray-800 shadow-xs rounded-xl border border-gray-200 dark:border-gray-700">
    <div class="flex flex-col h-full p-5">
        <header>
            <div class="flex items-center justify-between">
                <CategoryIcon 
                    IconSvg="@GetCategoryIcon(Category)" 
                    Variant="@GetCategoryVariant(Category)" />
                <AvatarStack Avatars="@GetAvatarItems()" Size="28" />
            </div>
        </header>
        <div class="grow mt-2">
            <a class="inline-flex text-gray-800 dark:text-gray-100 hover:text-gray-900 dark:hover:text-white mb-1" href="@Link">
                <h2 class="text-xl leading-snug font-semibold">@Title</h2>
            </a>
            <div class="text-sm">@Content</div>
        </div>
        <footer class="mt-5">
            <div class="text-sm font-medium text-gray-500 mb-2">@DateFrom <span class="text-gray-400 dark:text-gray-600">-&gt;</span> @DateTo</div>
            <div class="flex justify-between items-center">
                <div>
                    <StatusBadge Text="@Type" Variant="@GetStatusVariant(Type)" />
                </div>
                <div>
                    <a class="text-sm font-medium text-violet-500 hover:text-violet-600 dark:hover:text-violet-400" href="@Link">View -&gt;</a>
                </div>
            </div>
        </footer>
    </div>
</div>

@code {
    [Parameter] public string Category { get; set; } = "1";
    [Parameter] public List<MemberInfo> Members { get; set; } = new();
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Link { get; set; } = "#0";
    [Parameter] public string Content { get; set; } = "";
    [Parameter] public string DateFrom { get; set; } = "";
    [Parameter] public string DateTo { get; set; } = "";
    [Parameter] public string Type { get; set; } = "";

    private List<AvatarStack.AvatarItem> GetAvatarItems()
    {
        return Members.Select(m => new AvatarStack.AvatarItem
        {
            Name = m.Name,
            Url = m.Image,
            Link = m.Link
        }).ToList();
    }

    private string GetStatusVariant(string type) => type switch
    {
        "One-Time" => "success",
        "At Risk" => "warning",
        "Off-Track" => "error",
        _ => "default"
    };

    private string GetCategoryVariant(string category) => category switch
    {
        "1" => "rose",
        "2" => "emerald",
        "3" => "sky",
        "4" => "violet",
        _ => "gray"
    };

    private string GetCategoryIcon(string category) => category switch
    {
        "1" => @"<svg class=""w-9 h-9 fill-current text-rose-50"" viewBox=""0 0 36 36"">
                <path d=""M25 24H11a1 1 0 01-1-1v-5h2v4h12v-4h2v5a1 1 0 01-1 1zM14 13h8v2h-8z"" />
            </svg>",
        "2" => @"<svg class=""w-9 h-9 fill-current text-emerald-50"" viewBox=""0 0 36 36"">
                <path d=""M15 13v-3l-5 4 5 4v-3h8a1 1 0 000-2h-8zM21 21h-8a1 1 0 000 2h8v3l5-4-5-4v3z"" />
            </svg>",
        "3" => @"<svg class=""w-9 h-9 fill-current text-sky-50"" viewBox=""0 0 36 36"">
                <path d=""M23 11v2.085c-2.841.401-4.41 2.462-5.8 4.315-1.449 1.932-2.7 3.6-5.2 3.6h-1v2h1c3.5 0 5.253-2.338 6.8-4.4 1.449-1.932 2.7-3.6 5.2-3.6h3l-4-4zM15.406 16.455c.066-.087.125-.162.194-.254.314-.419.656-.872 1.033-1.33C15.475 13.802 14.038 13 12 13h-1v2h1c1.471 0 2.505.586 3.406 1.455zM24 21c-1.471 0-2.505-.586-3.406-1.455-.066.087-.125.162-.194.254-.316.422-.656.873-1.028 1.328.959.878 2.108 1.573 3.628 1.788V25l4-4h-3z"" />
            </svg>",
        "4" => @"<svg class=""w-9 h-9 fill-current text-violet-50"" viewBox=""0 0 36 36"">
                <path d=""M18 10c-4.4 0-8 3.1-8 7s3.6 7 8 7h.6l5.4 2v-4.4c1.2-1.2 2-2.8 2-4.6 0-3.9-3.6-7-8-7zm4 10.8v2.3L18.9 22H18c-3.3 0-6-2.2-6-5s2.7-5 6-5 6 2.2 6 5c0 2.2-2 3.8-2 3.8z"" />
            </svg>",
        _ => ""
    };

    public class MemberInfo
    {
        public string Name { get; set; } = "";
        public string Image { get; set; } = "";
        public string Link { get; set; } = "#0";
    }
}
