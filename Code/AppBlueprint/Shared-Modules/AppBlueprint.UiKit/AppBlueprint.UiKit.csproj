<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <Version>$(GITVERSION_SemVer)</Version>
    </PropertyGroup>

    <PropertyGroup>

        <!-- Enable packaging the UiKit project to Nuget package file -->
        <IsPackable>true</IsPackable>
        <!-- NuGet Configuration -->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <!--<OutputPath>C:\Development\LocalNugetFeed\Release</OutputPath>-->
        <GeneratePackage>true</GeneratePackage>
        <Version>1.0.2</Version> <!-- Update version as needed -->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>

        <PackageId>SaaS-Factory.AppBlueprint.UiKit</PackageId>
        <Authors>Casper Rubæk</Authors>
        <Description>A reusable Razor Class Library for UI components</Description>
        <PackageTags>blazor;razor;components;mudblazor</PackageTags>
        <PackageProjectUrl>https://github.com/Trubador/SaaS-Factory/blob/main/Code/AppBlueprint/AppBlueprint.UiKit/README.md</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Trubador/SaaS-Factory</RepositoryUrl>
        <RepositoryType>git</RepositoryType>


        <!-- Disable incremental builds -->
        <DisableFastUpToDateCheck>true</DisableFastUpToDateCheck>
        <!--        <DisableIncrementalBuild>true</DisableIncrementalBuild>-->

        <!-- Force Razor view/component recompilation -->
        <RazorCompileOnBuild>true</RazorCompileOnBuild>
        <RazorCompileOnPublish>true</RazorCompileOnPublish>
        <!--        <UseRazorBuildServer>false</UseRazorBuildServer>-->

        <!-- Ensure destination folders are cleaned before copying -->
        <CleanDestinationFolderBeforeCopy>true</CleanDestinationFolderBeforeCopy>

        <RootNamespace>AppBlueprint.UiKit</RootNamespace>

        <UserSecretsId>9bca23ea-ec67-491d-96b7-769afe5d8ce6</UserSecretsId>

    </PropertyGroup>

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>


    </PropertyGroup>

    <PropertyGroup>
        <RazorCompileOnBuild>true</RazorCompileOnBuild>
        <RazorCompileOnPublish>true</RazorCompileOnPublish>
    </PropertyGroup>


    <ItemGroup>
        <SupportedPlatform Include="browser"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.Web"/>
        <PackageReference Include="MudBlazor"/>
        <PackageReference Include="MudBlazor.ThemeManager"/>
    </ItemGroup>

