<div class="flex flex-col col-span-full sm:col-span-6 xl:col-span-4 bg-white dark:bg-gray-800 shadow-xs rounded-xl">
    <header class="px-5 py-4 border-b border-gray-100 dark:border-gray-700/60">
        <h2 class="font-semibold text-gray-800 dark:text-gray-100">Sessions By Gender</h2>
    </header>
    <!-- Chart -->
    <div class="grow flex flex-col justify-center p-5">
        <MosaicPortal.Web.Components.Charts.PieChart
            CanvasId="analytics-card-10-chart"
            Labels="@labels"
            Data="@data"
            BackgroundColors="@backgroundColors"
            HoverBackgroundColors="@hoverBackgroundColors"
            Width="389"
            Height="260" />
    </div>
</div>

@code {
    private List<string> labels = new() { "Males", "Females", "Unknown" };
    private List<double> data = new() { 500, 326, 242 };
    private List<string> backgroundColors = new()
    {
        "rgba(139, 92, 246, 0.8)",   // violet-500
        "rgba(56, 189, 248, 0.8)",   // sky-400
        "rgba(34, 197, 94, 0.8)"     // green-500
    };
    private List<string> hoverBackgroundColors = new()
    {
        "rgba(124, 58, 237, 0.8)",   // violet-600
        "rgba(14, 165, 233, 0.8)",   // sky-500
        "rgba(22, 163, 74, 0.8)"     // green-600
    };
}
