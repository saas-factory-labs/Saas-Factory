@page "/charts"

<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">

    <!-- Page header -->
    <div class="mb-8">
        <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold">Chart Components</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">Data visualization with Blazorise.Charts</p>
    </div>

    <div class="space-y-8">

        <!-- Line Charts Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Line Charts</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Basic Line Chart -->
                <LineChartCard Title="Revenue Over Time"
                               Subtitle="Monthly revenue for 2024"
                               ShowSummary="true"
                               SummaryValue="$128,430"
                               SummaryLabel="Total Revenue"
                               TrendValue="12.5m"
                               Labels="@lineLabels"
                               Datasets="@lineDatasets">
                    <HeaderActions>
                        <select class="text-sm bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg px-3 py-1.5">
                            <option>Last 12 months</option>
                            <option>Last 6 months</option>
                            <option>Last 30 days</option>
                        </select>
                    </HeaderActions>
                </LineChartCard>

                <!-- Multi-line Chart -->
                <LineChartCard Title="Traffic Sources"
                               Subtitle="Visitors by channel"
                               Labels="@lineLabels"
                               Datasets="@multiLineDatasets" />
            </div>
        </div>

        <!-- Bar Charts Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Bar Charts</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Vertical Bar Chart -->
                <BarChartCard Title="Sales by Category"
                              Subtitle="Product category performance"
                              Labels="@barLabels"
                              Datasets="@barDatasets" />

                <!-- Stacked Bar Chart -->
                <BarChartCard Title="Quarterly Revenue"
                              Subtitle="Revenue breakdown by region"
                              Stacked="true"
                              Labels="@stackedBarLabels"
                              Datasets="@stackedBarDatasets" />
            </div>
        </div>

        <!-- Horizontal Bar Chart -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Horizontal Bar Chart</h2>
            <BarChartCard Title="Top Products"
                          Subtitle="Best selling products this month"
                          Horizontal="true"
                          Height="250px"
                          Labels="@horizontalBarLabels"
                          Datasets="@horizontalBarDatasets" />
        </div>

        <!-- Doughnut & Pie Charts Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Doughnut & Pie Charts</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Doughnut Chart with Center Content -->
                <DoughnutChartCard Title="Device Usage"
                                   Subtitle="Sessions by device type"
                                   Variant="doughnut"
                                   LegendPosition="bottom"
                                   Data="@deviceData">
                    <CenterContent>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-gray-800 dark:text-gray-100">24.7K</div>
                            <div class="text-xs text-gray-500 dark:text-gray-400">Total Sessions</div>
                        </div>
                    </CenterContent>
                </DoughnutChartCard>

                <!-- Doughnut Chart with Side Legend -->
                <DoughnutChartCard Title="Traffic Sources"
                                   Variant="doughnut"
                                   LegendPosition="right"
                                   Height="180px"
                                   Data="@trafficData" />

                <!-- Pie Chart -->
                <DoughnutChartCard Title="Browser Share"
                                   Variant="pie"
                                   LegendPosition="bottom"
                                   Data="@browserData" />
            </div>
        </div>

        <!-- Area Charts Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Area Charts</h2>
            <div class="grid grid-cols-1 gap-6">
                <!-- Area Chart with Summary -->
                <AreaChartCard Title="Website Analytics"
                               Subtitle="Traffic and engagement metrics"
                               ShowSummary="true"
                               SummaryItems="@areaSummaryItems"
                               Labels="@areaLabels"
                               Datasets="@areaDatasets" />

                <!-- Stacked Area Chart -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <AreaChartCard Title="Revenue Breakdown"
                                   Subtitle="Revenue by product line"
                                   Stacked="true"
                                   Labels="@areaLabels"
                                   Datasets="@stackedAreaDatasets" />

                    <AreaChartCard Title="User Activity"
                                   Subtitle="Active users over time"
                                   Labels="@areaLabels"
                                   Datasets="@singleAreaDatasets" />
                </div>
            </div>
        </div>

    </div>
</div>

