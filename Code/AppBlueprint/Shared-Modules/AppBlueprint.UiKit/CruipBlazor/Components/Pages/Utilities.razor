@page "/utilities"

<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">

    <!-- Page header -->
    <div class="mb-8">
        <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold">Utility Components</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">Helper components for enhanced user experience</p>
    </div>

    <div class="space-y-8">

        <!-- Global Search Section -->
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Global Search</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Searchable modal with recent searches and quick actions</p>

            <button type="button"
                    class="btn bg-violet-500 hover:bg-violet-600 text-white"
                    @onclick="() => searchOpen = true">
                <svg class="w-4 h-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Open Search
            </button>
        </div>

        <!-- Theme Switcher Section -->
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Theme Switcher</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Switch between light, dark, and system themes</p>

            <div class="space-y-6">
                <!-- Button variant -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Button (Toggle)</h3>
                    <ThemeSwitcher Variant="button"/>
                </div>

                <!-- Dropdown variant -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Dropdown</h3>
                    <ThemeSwitcher Variant="dropdown" ShowLabel="true"/>
                </div>

                <!-- Toggle variant -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Segmented Toggle</h3>
                    <ThemeSwitcher Variant="toggle"/>
                </div>
            </div>
        </div>

        <!-- Empty States Section -->
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Empty States</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Placeholder content for when there's no data</p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- No Data -->
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg">
                    <EmptyState Preset="no-data"
                                Title="No data yet"
                                Description="Get started by creating your first item."
                                Size="sm"
                                Compact="true"
                                PrimaryActionText="Create Item"
                                PrimaryAction="@(() => { })"/>
                </div>

                <!-- No Results -->
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg">
                    <EmptyState Preset="no-results"
                                Title="No results found"
                                Description="Try adjusting your search or filter criteria."
                                Size="sm"
                                Compact="true"/>
                </div>

                <!-- Error -->
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg">
                    <EmptyState Preset="error"
                                Title="Something went wrong"
                                Description="We couldn't load this content. Please try again."
                                Size="sm"
                                Compact="true"
                                PrimaryActionText="Retry"
                                PrimaryAction="@(() => { })"/>
                </div>

                <!-- No Access -->
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg">
                    <EmptyState Preset="no-access"
                                Title="Access denied"
                                Description="You don't have permission to view this content."
                                Size="sm"
                                Compact="true"
                                SecondaryActionText="Request Access"
                                SecondaryAction="@(() => { })"/>
                </div>
            </div>
        </div>

        <!-- Loading Skeletons Section -->
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Loading Skeletons</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Placeholder content while loading data</p>

            <div class="space-y-8">
                <!-- Basic skeletons -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Basic Shapes</h3>
                    <div class="flex items-center gap-6">
                        <div class="space-y-2">
                            <span class="text-xs text-gray-500">Text</span>
                            <LoadingSkeleton Variant="text" Width="150px"/>
                        </div>
                        <div class="space-y-2">
                            <span class="text-xs text-gray-500">Circular</span>
                            <LoadingSkeleton Variant="circular" Width="48px" Height="48px"/>
                        </div>
                        <div class="space-y-2">
                            <span class="text-xs text-gray-500">Rectangular</span>
                            <LoadingSkeleton Variant="rectangular" Width="100px" Height="60px"/>
                        </div>
                        <div class="space-y-2">
                            <span class="text-xs text-gray-500">Rounded</span>
                            <LoadingSkeleton Variant="rounded" Width="100px" Height="40px"/>
                        </div>
                    </div>
                </div>

                <!-- Card skeleton -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Card Skeleton</h3>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <LoadingSkeletonCard ShowAvatar="true" TextLines="2"/>
                        <LoadingSkeletonCard ShowImage="true" ShowTitle="true" TextLines="2" ShowActions="true"/>
                        <LoadingSkeletonCard ShowTitle="true" TextLines="3"/>
                    </div>
                </div>

                <!-- Table skeleton -->
                <div>
                    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Table Skeleton</h3>
                    <LoadingSkeletonTable Rows="3" Columns="4" ShowAvatar="true" Selectable="true"/>
                </div>
            </div>
        </div>

        <!-- Onboarding Tour Section -->
        <div class="bg-white dark:bg-gray-800 shadow-xs rounded-xl p-6">
            <h2 id="tour-title" class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Onboarding Tour</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Step-by-step guided tours for new users</p>

            <div class="flex items-center gap-4">
                <button id="tour-start-btn"
                        type="button"
                        class="btn bg-violet-500 hover:bg-violet-600 text-white"
                        @onclick="StartTour">
                    Start Demo Tour
                </button>
                <span id="tour-info" class="text-sm text-gray-500 dark:text-gray-400">
                    Click to start a demo onboarding tour
                </span>
            </div>
        </div>

    </div>

</div>

<!-- Global Search Modal -->
<GlobalSearch IsOpen="searchOpen" IsOpenChanged="@((bool value) => searchOpen = value)"/>

<!-- Onboarding Tour -->
<OnboardingTour IsActive="tourActive"
                IsActiveChanged="@((bool value) => tourActive = value)"
                Steps="@tourSteps"
                OnComplete="OnTourComplete"
                OnSkip="OnTourSkip"/>

@code {
    private bool searchOpen;
    private bool tourActive;

    private List<OnboardingTour.TourStep> tourSteps = new()
    {
        new()
        {
            Title = "Welcome to the Dashboard",
            Description = "This is your main dashboard where you can see all your important metrics and data at a glance.",
            TargetSelector = "#tour-title",
            Position = "bottom"
        },
        new()
        {
            Title = "Start Your Tour",
            Description = "Click this button anytime to restart the onboarding tour and learn about new features.",
            TargetSelector = "#tour-start-btn",
            Position = "bottom"
        },
        new()
        {
            Title = "Helpful Information",
            Description = "Contextual help text appears throughout the app to guide you.",
            TargetSelector = "#tour-info",
            Position = "top"
        }
    };

    private void StartTour()
    {
        tourActive = true;
    }

    private void OnTourComplete()
    {
        Console.WriteLine("Tour completed!");
    }

    private void OnTourSkip()
    {
        Console.WriteLine("Tour skipped");
    }

}
