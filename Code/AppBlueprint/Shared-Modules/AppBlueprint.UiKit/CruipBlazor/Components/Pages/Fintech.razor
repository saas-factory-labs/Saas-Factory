@page "/dashboard/fintech"

<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">

    <!-- Page header -->
    <div class="sm:flex sm:justify-between sm:items-center mb-5">

        <!-- Left: Title -->
        <div class="mb-4 sm:mb-0">
            <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold">Fintech</h1>
        </div>

        <!-- Right: Actions -->
        <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">

            <!-- Date Range Picker -->
            <DateRangePicker Align="right"/>

            <!-- Add account button -->
            <button class="btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white">
                <svg class="w-4 h-4 fill-current opacity-50 shrink-0" viewBox="0 0 16 16">
                    <path d="M15 7H9V1c0-.6-.4-1-1-1S7 .4 7 1v6H1c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1V9h6c.6 0 1-.4 1-1s-.4-1-1-1z"/>
                </svg>
                <span class="hidden xs:block ml-2">Add Account</span>
            </button>

        </div>

    </div>

    <!-- Cards -->
    <div class="grid grid-cols-12 gap-6">

        <!-- Page Intro -->
        <MosaicPortal.Web.Components.Fintech.FintechIntro/>
        <!-- Line chart (Portfolio Returns) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard01/>
        <!-- Credit Card -->
        <MosaicPortal.Web.Components.Fintech.FintechCard02/>
        <!-- Bar chart (Cash Flow) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard03/>
        <!-- Horizontal bar chart (Cash Flow by Account) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard04/>
        <!-- Table (Recent Expenses) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard05/>
        <!-- Table (Recent Earnings) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard06/>
        <!-- Line chart (Saving Goals) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard07/>
        <!-- Line chart (Growth Portfolio) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard08/>
        <!-- Pie chart (Portfolio Value) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard09/>
        <!-- Line charts (Stock graphs) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard10/>
        <MosaicPortal.Web.Components.Fintech.FintechCard11/>
        <MosaicPortal.Web.Components.Fintech.FintechCard12/>
        <MosaicPortal.Web.Components.Fintech.FintechCard13/>
        <!-- Table (Market Trends) -->
        <MosaicPortal.Web.Components.Fintech.FintechCard14/>

    </div>

</div>

