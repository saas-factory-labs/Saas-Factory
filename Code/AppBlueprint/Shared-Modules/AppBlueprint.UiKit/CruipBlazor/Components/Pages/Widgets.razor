@page "/widgets"

<div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-[96rem] mx-auto">

    <!-- Page header -->
    <div class="mb-8">
        <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold">Dashboard Widgets</h1>
        <p class="text-gray-500 dark:text-gray-400 mt-2">Calendars, activity feeds, progress trackers, and stats cards</p>
    </div>

    <div class="space-y-8">

        <!-- Stats Cards Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Stats Cards</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <StatsCard Value="24,780"
                           Label="Total Users"
                           TrendValue="12.5m"
                           Variant="primary"
                           IconName="users"
                           ShowSparkline="true"
                           SparklineData="@(new List<decimal> { 10, 15, 12, 25, 20, 35, 30, 45 })" />

                <StatsCard Value="$128,430"
                           Label="Revenue"
                           TrendValue="8.2m"
                           Variant="success"
                           IconName="revenue"
                           ShowSparkline="true"
                           SparklineData="@(new List<decimal> { 20, 25, 30, 28, 35, 40, 38, 50 })" />

                <StatsCard Value="1,284"
                           Label="Orders"
                           TrendValue="-3.1m"
                           Variant="warning"
                           IconName="orders"
                           ShowProgress="true"
                           ProgressValue="68"
                           ProgressLabel="Monthly target" />

                <StatsCard Value="94.2%"
                           Label="Conversion Rate"
                           TrendValue="2.4m"
                           Variant="default"
                           IconName="chart">
                    <Footer>
                        <div class="flex items-center justify-between text-sm">
                            <span class="text-gray-500 dark:text-gray-400">vs last month</span>
                            <span class="text-green-500 font-medium">+5.2%</span>
                        </div>
                    </Footer>
                </StatsCard>
            </div>
        </div>

        <!-- Calendar and Activity Feed Row -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Calendar Widget -->
            <div>
                <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Calendar</h2>
                <CalendarWidget Events="@calendarEvents"
                                @bind-SelectedDate="selectedDate"
                                ShowEventsList="true"
                                Class="shadow-sm" />
            </div>

            <!-- Activity Feed -->
            <div>
                <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Activity Feed</h2>
                <ActivityFeed Title="Recent Activity"
                              Activities="@activityItems"
                              ShowLoadMore="true"
                              Class="shadow-sm">
                    <HeaderActions>
                        <button class="text-sm text-violet-600 dark:text-violet-400 hover:text-violet-700 font-medium">
                            View all
                        </button>
                    </HeaderActions>
                </ActivityFeed>
            </div>
        </div>

        <!-- Progress Trackers Section -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Progress Trackers</h2>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Vertical Progress Tracker -->
                <ProgressTracker Title="Project Milestones"
                                 Description="Q4 2024 Development Roadmap"
                                 Steps="@verticalSteps"
                                 Variant="vertical"
                                 ShowProgressBar="true"
                                 ShowPercentage="true"
                                 Class="shadow-sm" />

                <!-- Horizontal Progress Tracker -->
                <ProgressTracker Title="Order Status"
                                 Description="Track your order progress"
                                 Steps="@horizontalSteps"
                                 Variant="horizontal"
                                 ShowProgressBar="false"
                                 ShowPercentage="false"
                                 Class="shadow-sm" />
            </div>
        </div>

        <!-- Additional Stats Row -->
        <div>
            <h2 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">More Stats Variants</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <StatsCard Value="847"
                           Label="Active Sessions"
                           Prefix=""
                           TrendValue="15.3m"
                           Variant="primary"
                           ShowSparkline="true"
                           SparklineData="@(new List<decimal> { 30, 45, 35, 50, 40, 55, 45, 60 })">
                    <Icon>
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </Icon>
                </StatsCard>

                <StatsCard Value="12.4GB"
                           Label="Storage Used"
                           ShowTrend="false"
                           Variant="warning"
                           ShowProgress="true"
                           ProgressValue="62"
                           ProgressLabel="of 20GB">
                    <Icon>
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                        </svg>
                    </Icon>
                </StatsCard>

                <StatsCard Value="99.9%"
                           Label="Uptime"
                           TrendValue="0.1m"
                           Variant="success">
                    <Icon>
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                        </svg>
                    </Icon>
                    <Footer>
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                            Last incident: 45 days ago
                        </div>
                    </Footer>
                </StatsCard>
            </div>
        </div>

    </div>
</div>

