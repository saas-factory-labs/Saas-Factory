@using MosaicPortal.Web.Components.Charts

<div class="flex flex-col col-span-full sm:col-span-6 xl:col-span-4 bg-white dark:bg-gray-800 shadow-xs rounded-xl">
    <header class="px-5 py-4 border-b border-gray-100 dark:border-gray-700/60 flex items-center">
        <h2 class="font-semibold text-gray-800 dark:text-gray-100">Portfolio Value</h2>
    </header>
    <div class="px-5 py-3">
        <div class="text-sm italic mb-2">Hey Mark, here is the value of your portfolio:</div>
        <div class="text-3xl font-bold text-gray-800 dark:text-gray-100">$224,807.27</div>
    </div>
    <!-- Chart -->
    <div class="grow flex flex-col justify-center">
        <MosaicPortal.Web.Components.Charts.PieChart
            CanvasId="portfolio-value-chart"
            Height="220"
            Labels="@labels"
            Data="@data"
            BackgroundColors="@backgroundColors"
            HoverBackgroundColors="@hoverBackgroundColors"
            ContainerClass="grow"/>
    </div>
</div>

@code {
    private List<string> labels = new() { "Cash", "Commodities", "Bonds", "Stock" };
    private List<double> data = new() { 12, 13, 10, 65 };

    // Using custom colors from app.css
    private List<string> backgroundColors = new()
    {
        "rgb(75, 211, 125)", // green-400
        "rgb(247, 205, 76)", // yellow-400
        "rgb(103, 191, 255)", // sky-500
        "rgb(132, 112, 255)" // violet-500
    };

    private List<string> hoverBackgroundColors = new()
    {
        "rgb(62, 201, 114)", // green-500
        "rgb(240, 187, 51)", // yellow-500
        "rgb(86, 177, 243)", // sky-600
        "rgb(117, 95, 248)" // violet-600
    };

}
